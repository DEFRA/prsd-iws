@model EA.Iws.Web.Areas.MovementDocument.ViewModels.Quantity.QuantityViewModel
@{
    ViewBag.Title = "Actual quantity";
}

<h2 class="heading-large">How much waste is being exported?</h2>

<p>Enter the actual quantity of waste as a number. You can add decimal figures if necessary</p>

<p>You have used <em class="bold-small">@Html.DisplayFor(m => m.TotalUsed)</em> of <em class="bold-small">@Html.DisplayFor(m => m.TotalNotified)</em> @Html.DisplayFor(m => m.UnitsDisplay) for this notification.</p>
<p>You have <em class="bold-small">@Html.DisplayFor(m => m.TotalAvailable)</em> @Html.DisplayFor(m => m.UnitsDisplay) remaining.</p>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.Gds().ValidationSummary()

    for (int i = 0; i < Model.AvailableUnits.Count; i++)
    {
        @Html.HiddenFor(m => m.AvailableUnits[i])
    }
    @Html.HiddenFor(m => m.TotalUsed)
    @Html.HiddenFor(m => m.TotalNotified)
    @Html.HiddenFor(m => m.TotalAvailable)

    <div class="form-group @Html.Gds().FormGroupClass(m => m.Quantity)">
        @Html.Gds().LabelFor(m => m.Quantity, false)
        @Html.Gds().ValidationMessageFor(m => m.Quantity)
        <div class="grid-row">
            <div class="column-third">
                @Html.Gds().TextBoxFor(m => m.Quantity, new { @class = "form-control form-control-wide" })
            </div>
            <div class="column-third">
                @Html.Gds().DropDownListFor(m => m.Units, Model.UnitsSelectList, new { @class = "form-control form-control-wide" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <button class="button" type="submit">@EA.Iws.Web.Infrastructure.Constants.ContinueButtonText</button>
    </div>
}

<style>
    .form-control-wide {
        width: 100%;
    }
</style>