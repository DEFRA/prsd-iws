@model EA.Iws.Web.Areas.Reports.ViewModels.MissingShipments.IndexViewModel
@using Resource = EA.Iws.Web.Areas.Reports.Views.MissingShipments.IndexResources

@{
    ViewBag.Title = Resource.Title;
}

<h1 class="heading-large">@Resource.MainHeading</h1>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.Gds().ValidationSummary()

    <div class="form-group @Html.Gds().FormGroupClass(m => m.Year)">
        @Html.Gds().LabelFor(m => m.Year)
        @Html.Gds().ValidationMessageFor(m => m.Year)
        @Html.Gds().DropDownListFor(m => m.Year, Model.Years, string.Empty, new { @class = "form-control form-control-1-4" })
    </div>

    <div class="form-group">
        <button class="button" type="submit">@Resource.ButtonText</button>
    </div>
}

@Html.ActionLink(Resource.HomeLink, "Index", "Home")