@using EA.Iws.Web.Areas.ExportMovement.ViewModels.EditDate
@using Resource = EA.Iws.Web.Areas.ExportMovement.Views.EditDate.ThreeWorkingDaysResources
@model ThreeWorkingDaysWarningViewModel

@{
    ViewBag.Title = Resource.Title;
}

<h1 class="heading-large">@Resource.Heading</h1>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.Gds().ValidationSummary()

    @Html.HiddenFor(m => m.ShipmentDate)

    <div class="form-group">@Resource.Body</div>

    <div class="form-group @Html.Gds().FormGroupClass(m => m.Selection)">
        @Html.Gds().ValidationMessageFor(m => m.Selection)
        <fieldset>
            <div class="multiple-choice">
                @Html.RadioButtonFor(m => m.Selection, ThreeWorkingDaysSelection.ContinueAnyway, new { @id = "one" })
                <label for="one">
                    @Resource.ContinueAnywayOption
                </label>
            </div>

            <div class="multiple-choice" data-target="change-date">
                @Html.RadioButtonFor(m => m.Selection, ThreeWorkingDaysSelection.ChangeDate, new { @id = "two" })
                <label for="two">
                    @Resource.ChangeDateOption
                </label>
            </div>
            
        </fieldset>
    </div>

    <div class="form-group">
        <button class="button" type="submit">Continue</button>
    </div>
}