@model EA.Iws.Web.Areas.ExportMovement.ViewModels.ReceiptCompleteViewModel
@{
    ViewBag.Title = "Receipt complete";
}

<header class="hgroup">
    <h1 class="heading-large">Your certificate of receipt is now complete</h1>
    Before you continue, you need to upload the signed copy of the certificate of receipt.
</header>

@using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.NotificationId)
    @Html.HiddenFor(m => m.Unit)
    @Html.HiddenFor(m => m.DateReceived)
    @Html.HiddenFor(m => m.Quantity)
    @Html.Gds().ValidationSummary()

    <div class="form-group @Html.Gds().FormGroupClass(m => m.File)">
        @Html.Gds().LabelFor(m => m.File, showOptionalLabel: false)
        @Html.Gds().ValidationMessageFor(m => m.File)
        @Html.Gds().TextBoxFor(m => m.File, new { type = "file" })
    </div>

    <div class="form-group-compound">
        <button class="button" type="submit">@Constants.ContinueButtonText</button>
    </div>
}