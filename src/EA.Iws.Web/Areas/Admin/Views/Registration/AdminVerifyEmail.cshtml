@{
    ViewBag.Title = "Email verified";
}

<h2 class="heading-large">EA User Email verified</h2>

<p>Your email has been verified successfully.</p>

@if (User.Identity.IsAuthenticated)
{
    @Html.ActionLink("Continue", "AwaitApproval", "Registration", null, new { @class = "button" })
}
else
{
    @Html.ActionLink("Log in to continue using International Waste Shipments", "Index", "Home")
}
