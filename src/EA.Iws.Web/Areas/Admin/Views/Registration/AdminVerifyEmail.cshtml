@{
    ViewBag.Title = "Email verified";
}

<h1 class="govuk-heading-l">Your email has been verified successfully.</h1>


@if (User.Identity.IsAuthenticated)
{
    @Html.ActionLink(Constants.ContinueButtonText, "AwaitApproval", "Registration", null, new { @class = "govuk-button" })
}
else
{
    @Html.ActionLink("Log in to continue using International Waste Shipments", "Index", "Home")
}
