@model EA.Iws.Core.Notification.UserNotificationsSummary
@using Resources = EA.Iws.Web.Areas.Admin.Views.ExternalUserAdministration.DeactivateResources
@{
    ViewBag.Title = Resources.SummaryTitle;
}

<h1 class="govuk-heading-l">@Resources.SummaryTitle</h1>

@if (Model.NumberOfNotifications == 1)
{
    <p>@Resources.CurrentlySingleNotification</p>
    <p>@Resources.ReallocateSingle</p>
}
else
{
    <p>@string.Format(Resources.CurrentlyMultipleNotifications, Model.NumberOfNotifications)</p>
    if (Model.NumberOfNotifications > 1)
    {
        <p>@Resources.ReallocateMultiple</p>
    }
}

@Html.ActionLink(Constants.ContinueOnlyButtonText, "DeactivateConfirmation", routeValues: new { userId = ViewBag.UserId }, htmlAttributes: new { @class = "govuk-button" })

@section menu {
    @Html.Action("HomeNavigation", "Menu", new { area = "Admin", section = AdminHomeNavigationSection.AccountServices })
}