@using Resources = EA.Iws.Web.Areas.Admin.Views.ExternalUserAdministration.ReactivateResources
@{
    ViewBag.Title = Resources.ConfirmationTitle;
}

<h1 class="heading-large">@Resources.ConfirmationTitle</h1>

<p>@string.Format(Resources.Confirmation, ViewBag.Email)</p>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.Hidden("UserId", (Guid)ViewBag.UserId)
    @Html.Hidden("Email", (string)ViewBag.Email)
    <button class="button" type="submit">@Resources.ReactivateButton</button>
}

@Html.ActionLink("Home", "Index", "Home")

@section menu {
    @Html.Action("HomeNavigation", "Menu", new { area = "Admin", section = AdminHomeNavigationSection.AccountServices })
}