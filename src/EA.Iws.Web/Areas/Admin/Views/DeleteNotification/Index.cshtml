@model EA.Iws.Web.Areas.Admin.ViewModels.DeleteNotification.IndexViewModel
@using Resources = EA.Iws.Web.Areas.Admin.Views.DeleteNotification.IndexResources

@{
    ViewBag.Title = Resources.Title;
}


<div class="grid-row">
    <div class="column-two-thirds">
        <h1 class="heading-large">@Resources.MainHeading</h1>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.Gds().ValidationSummary()

            <div class="form-group @Html.Gds().FormGroupClass(m => m.NotificationNumber)">
                @Html.Gds().LabelFor(m => m.NotificationNumber)
                @Html.Gds().ValidationMessageFor(m => m.NotificationNumber)
                @Html.Gds().TextBoxFor(m => m.NotificationNumber)
            </div>

            <h2 class="heading-small">@Resources.Question</h2>

            <div class="form-group @Html.Gds().FormGroupClass(m => m.IsExportNotification)">
                @Html.Gds().ValidationMessageFor(m => m.IsExportNotification)

                <fieldset>
                    <label class="block-label" for="yes">
                        @Html.RadioButtonFor(m => m.IsExportNotification, true, new { id = "yes" })
                        @Resources.Export
                    </label>
                    <label class="block-label" for="no">
                        @Html.RadioButtonFor(m => m.IsExportNotification, false, new { id = "no" })
                        @Resources.Import
                    </label>
                </fieldset>
            </div>

            <div class="form-group"><button type="submit" class="button">@Resources.ButtonText</button></div>
        }

        @Html.ActionLink(@Resources.HomeLinkText, "Index", "Home")
    </div>
</div>