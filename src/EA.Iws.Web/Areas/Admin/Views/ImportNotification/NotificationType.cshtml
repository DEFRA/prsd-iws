@using Resources = EA.Iws.Web.Areas.Admin.Views.ImportNotification.NotificationTypeResources
@model EA.Iws.Web.Areas.Admin.ViewModels.ImportNotification.NotificationTypeViewModel
@{
    ViewBag.Title = Resources.Title;
}

<header class="hgroup text">
    <h1 class="govuk-heading-l">@Resources.MainHeading</h1>
</header>

@using (Html.BeginForm())
{
    @Html.Gds().ValidationSummary()
    @Html.AntiForgeryToken()

    @Html.HiddenFor(m => m.NotificationNumber)
    @Html.HiddenFor(m => m.ReceivedDate)
    @Html.HiddenFor(m => m.IsInterim)

    <div class="govuk-form-group">@Html.EditorFor(m => m.NotificationTypeRadioButtons)</div>

    <button class="govuk-button" type="submit">@Constants.ContinueButtonText</button>
}