@using Resources = EA.Iws.Web.Areas.Admin.Views.ImportNotification.NumberResources
@model EA.Iws.Web.Areas.Admin.ViewModels.ImportNotification.NotificationNumberViewModel

@{
    ViewBag.Title = Resources.Title;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <header class="hgroup">
        <h1 class="govuk-heading-l">@Resources.MainHeading</h1>
    </header>

    @Html.Gds().ValidationSummary()

    <div class="govuk-form-group @Html.Gds().FormGroupClass(m => m.NotificationNumber)">
        @Html.Gds().LabelFor(m => m.NotificationNumber)
        @Html.Gds().ValidationMessageFor(m => m.NotificationNumber)
        @Html.Gds().TextBoxFor(m => m.NotificationNumber, new { @MaxLength = 25 })
    </div>

    <div class="govuk-form-group">
        <button class="govuk-button" type="submit">@Constants.ContinueButtonText</button>
    </div>
}