@using Resource = EA.Iws.Web.Areas.NotificationMovements.Views.BulkUploadTemplate.BulkUploadTemplateResources
@using EA.Iws.Core.Shared
@model EA.Iws.Web.Areas.NotificationMovements.ViewModels.BulkUploadTemplate.BulkUploadTemplateViewModel
@{
    ViewBag.Title = @Resource.Title;
    Layout = "~/Views/Shared/_Layout.GovUK.Sections.cshtml";

    var receiptBulkUploadText = Model.NotificationType == NotificationType.Disposal ? "disposal" : "recovery";
}

<header class="hgroup text">
    <h1 class="govuk-heading-l">@Resource.Header</h1>
</header>

<p class="text">@string.Format(@Resource.Description, @Model.NotificationNumber)</p>

<div class="govuk-form-group">
    <ul class="list list-bullet">
        <li>
            @Html.ActionLink(@Resource.PrenotificationTemplate, "PrenotificationTemplate", "BulkUploadTemplate", new { id = @Model.NotificationId }, null)
        </li>
    </ul>
    <br/>
    <ul class="list list-bullet">
        <li>
            @Html.ActionLink(string.Format(@Resource.ReceiptRecoveryTemplate, receiptBulkUploadText), "ReceiptRecoveryTemplate", "BulkUploadTemplate", new { id = @Model.NotificationId }, null)
        </li>
    </ul>
</div>

<br/>

<div>
    @Html.ActionLink(@Resource.NotificationOptions, "Index", "Options", new { id = @Model.NotificationId, area = "NotificationApplication" }, null)
</div>