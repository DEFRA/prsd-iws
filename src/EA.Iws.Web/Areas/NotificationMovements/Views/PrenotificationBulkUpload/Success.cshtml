@using Resources = EA.Iws.Web.Areas.NotificationMovements.Views.PrenotificationBulkUpload.PrenotificationBulkUploadResources
@model EA.Iws.Web.Areas.NotificationMovements.ViewModels.PrenotificationBulkUpload.ShipmentMovementDocumentsViewModel

@{
    ViewBag.Title = @Resources.SuccessTitle;
    Layout = "~/Views/Shared/_Layout.GovUK.Sections.cshtml";
}

<div class="grid-row">
    <div class="column-full">
        <h1 class="heading-large">@Resources.SuccessHeaderText</h1>
        <div>
            <div class="grid-row column-quarter">
                <img class="summary-file-icon" src="@Url.Content("~/Content/images/file-icon.png")" alt="">
            </div>
            <div class="column-quarter">
                <span class="margin-bottom-30 margin-top-30">@Resources.SuccessText</span>
                <div class="grid-row margin-bottom-30 margin-top-30">
                    <span>@Model.PreNotificationFileName</span>
                    <img class="summary-confirmation-icon" src="@Url.Content("~/Content/images/confirmation-icon.png")" alt="">
                </div>
                <div class="grid-row margin-bottom-30 margin-top-30">
                    <span>@Model.ShipmentMovementFileName</span>
                    <img class="summary-confirmation-icon" src="@Url.Content("~/Content/images/confirmation-icon.png")" alt="">
                </div>
            </div>
        </div>
        <div class="column-full">
            @if (Model.Shipments.Count > 1)
            {
                <p>@string.Format(Resources.SuccessTextMultipleShipments, Model.GetShipments)</p>
            }
            else
            {
                <p>@string.Format(Resources.SuccessTextSingleShipment, Model.GetShipments)</p>
            }
        </div>

    </div>
</div>