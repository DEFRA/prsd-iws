@model EA.Iws.Web.Areas.NotificationMovements.ViewModels.Create.DownloadViewModel
@{
    ViewBag.Title = "Download";
    Layout = "~/Areas/NotificationMovements/Views/Shared/_CreateSummaryLayout.cshtml";
}

<header class="hgroup">
    <h1 class="heading-large">Download and print your prenotification</h1>
    <h2 class="heading-small">Before we can consider your prenotification, you'll need to sign it:</h2>
</header>
<ol class="list-number">
    <li>
        Download the
        @Html.ActionLink("IWS Movement", "GenerateMovementDocument", "Home", new { id = Model.MovementId, area = "Movement" }, new { })
        (.doc) file
    </li>
    <li>Print the file</li>
    <li>Sign it</li>
</ol>
        

@Html.ActionLink(Constants.ContinueButtonText, "Index", "Home", null, new { @class = "button" })