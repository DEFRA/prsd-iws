@model EA.Iws.Web.Areas.NotificationMovements.ViewModels.Create.NumberOfCarriersViewModel
@{
    Layout = "~/Areas/NotificationMovements/Views/Shared/_CreateSummaryLayout.cshtml";
    ViewBag.Title = "Number of carriers";
}

<h2 class="heading-large">How many carriers will be used for this shipment?</h2>

@Html.Gds().ValidationSummary()

@Html.Partial("_MeansOfTransport", Model.MeansOfTransportViewModel)

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.MovementNumber)

    <div class="form-group @Html.Gds().FormGroupClass(m => m.Number)">
        <div class="grid-row">
            <div class="column-third">
                @Html.Gds().LabelFor(m => m.Number, false)
                @Html.Gds().HintSpan("For example 3")
                @Html.Gds().ValidationMessageFor(m => m.Number)
                @Html.Gds().TextBoxFor(m => m.Number, new
                {
                    @class = "form-control form-control-wide",
                    type = "number",
                    min = 1,
                    step = 1
                })
            </div>
        </div>
    </div>

    <div class="form-group">
        <button class="button" type="submit">@Constants.ContinueButtonText</button>
    </div>
}
