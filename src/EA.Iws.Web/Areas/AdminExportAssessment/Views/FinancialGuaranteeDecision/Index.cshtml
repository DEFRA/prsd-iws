@model EA.Iws.Web.Areas.AdminExportAssessment.ViewModels.FinancialGuaranteeDecision.FinancialGuaranteeDecisionViewModel
@using Resources = EA.Iws.Web.Areas.AdminExportAssessment.Views.FinancialGuaranteeDecision.FinancialGuaranteeDecisionResources
@{
    ViewBag.Title = Resources.DecisionTitle;
}

<h2 class="govuk-heading-l">@Resources.DecisionTitle</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.Gds().ValidationSummary()
    @Html.HiddenFor(m => m.FinancialGuaranteeId)

    <div class="govuk-form-group">
        @Html.Gds().LabelFor(m => m.Decision, false)
        @Html.Gds().ValidationMessageFor(m => m.Decision)
        @Html.Gds().DropDownListFor(m => m.Decision, Model.PossibleDecisions, optionLabel: string.Empty)
    </div>

    <div class="govuk-form-group">
        <button class="govuk-button" type="submit" name="submit" value="decision">@Constants.ContinueButtonText</button>
    </div>
}

@section menu {
    @Html.Action("ExportNavigation", "Menu", new { area = "Admin", section = ExportNavigationSection.Assessment })
}