@using EA.Iws.Web.Areas.AdminExportAssessment.ViewModels.RefundDetails
@using EA.Iws.Web.Areas.AdminExportAssessment.Views.RefundDetails
@model RefundDetailsViewModel

@{
    ViewBag.Title = @IndexResources.MainHeading;
}

<h1 class="heading-large">@IndexResources.MainHeading</h1>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.Gds().ValidationSummary()
    @Html.HiddenFor(m => m.NotificationId)
    @Html.HiddenFor(m => m.Limit)

<div class="grid-row">
    <div class="column-two-thirds">
        <div class="grid-row">
            <div class="column-half">
                <div class="form-group @Html.Gds().FormGroupClass(m => m.Amount)">
                    @Html.Gds().LabelFor(m => m.Amount)
                    @Html.Gds().ValidationMessageFor(m => m.Amount)
                    @Html.Gds().TextBoxFor(m => m.Amount, new { @class = "form-control form-control-wide", @title = RefundDetailsViewModelResources.AmountRefundedLabel })
                </div>
            </div>
        </div>

        <hr>

        <div class="form-group @Html.Gds().FormGroupClass(m => m.Date) @Html.Gds().FormGroupClass(m => m.Date.Day) @Html.Gds().FormGroupClass(m => m.Date.Month) @Html.Gds().FormGroupClass(m => m.Date.Year)">
            @Html.LabelFor(m => m.Date, new { @class = "form-label-bold" })
            @Html.Gds().ValidationMessageFor(m => m.Date)
            @Html.EditorFor(m => m.Date)
        </div>

        <div class="form-group @Html.Gds().FormGroupClass(m => m.Comments)">
            @Html.Gds().LabelFor(m => m.Comments)
            @Html.Gds().ValidationMessageFor(m => m.Comments)
            @Html.TextAreaFor(m => m.Comments, new { @MaxLength = 500, @style = "width: 100%; height: 200px", @title = RefundDetailsViewModelResources.CommentsLabel })
        </div>
    </div>
</div>

<div class="form-group">
    <p>
        <button class="button" type="submit">@Constants.ContinueButtonText</button>
    </p>
</div>

    @Html.ActionLink(IndexResources.ReturnToAccountManagement, "Index", "AccountManagement")

}
