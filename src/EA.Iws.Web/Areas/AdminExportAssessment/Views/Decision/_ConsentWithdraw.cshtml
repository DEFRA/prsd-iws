@model EA.Iws.Web.Areas.AdminExportAssessment.ViewModels.Decision.NotificationAssessmentDecisionViewModel
@using Resourse = EA.Iws.Web.Areas.AdminExportAssessment.Views.Decision.DecisionResources

<div class="form-group">
    @Resourse.SingleDateWarning
</div>

<div class="form-group @Html.Gds().FormGroupClass(m => m.ConsentWithdrawnDate) @Html.Gds().FormGroupClass(m => m.ConsentWithdrawnDate.Day) @Html.Gds().FormGroupClass(m => m.ConsentWithdrawnDate.Month) @Html.Gds().FormGroupClass(m => m.ConsentWithdrawnDate.Year)">
    <label class="heading-medium">@Html.DisplayNameFor(m => m.ConsentWithdrawnDate)</label>
    @Html.Gds().ValidationMessageFor(m => m.ConsentWithdrawnDate)
    @Html.EditorFor(m => m.ConsentWithdrawnDate)
</div>

<div class="form-group @Html.Gds().FormGroupClass(m => m.ReasonsForConsentWithdrawal)">
    <label class="heading-medium">@Html.DisplayNameFor(m => m.ReasonsForConsentWithdrawal)</label>
    @Html.Gds().ValidationMessageFor(m => m.ReasonsForConsentWithdrawal)
    @Html.Gds().HintSpan(Resourse.ConsentWithdrawnReasonHint)
    @Html.TextAreaFor(m => m.ReasonsForConsentWithdrawal, new { @class = "govuk-textarea", @MaxLength = "4000", rows = 10 })
</div>