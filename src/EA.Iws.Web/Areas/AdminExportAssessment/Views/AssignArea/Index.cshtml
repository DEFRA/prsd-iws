@model EA.Iws.Web.Areas.AdminExportAssessment.ViewModels.AssignArea.AssignAreaViewModel

@{
    ViewBag.Title = "Assign an area";
}

<h1 class="govuk-heading-l">Select the area for this notification</h1>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.Gds().ValidationSummary()
    @Html.HiddenFor(m => m.NotificationId)

    <div class="govuk-form-group @Html.Gds().FormGroupClass(m => m.LocalAreaId)">
        @Html.Gds().LabelFor(m => m.LocalAreaId)
        @Html.Gds().ValidationMessageFor(m => m.LocalAreaId)
        @Html.Gds().DropDownListFor(m => m.LocalAreaId, Model.Areas, string.Empty, null)
    </div>

    <div class="govuk-form-group">
        <p> <button class="govuk-button" type="submit">@Constants.ContinueButtonText</button></p>
    </div>
}

@section menu {
    @Html.Action("ExportNavigation", "Menu", new { area = "Admin", section = ExportNavigationSection.Assessment })
}