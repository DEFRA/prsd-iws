@model EA.Iws.Web.Areas.NotificationApplication.ViewModels.NotificationApplication.JourneyViewModel

<div class="overview-block">
    @if (Model.IsCustomsOfficeCompleted)
    {
        if (!string.IsNullOrWhiteSpace(Model.EntryCustomsOffice.Name))
        {
            <div class="overview-block-element">
                <div class="grid-row">
                    <div class="column-half">Entry customs office:</div>
                    <div class="column-half">
                        @Html.DisplayFor(m => m.EntryCustomsOffice.Name),
                        @Html.DisplayFor(m => m.EntryCustomsOffice.Country.Name)
                    </div>
                </div>
                <div class="grid-row">
                    <div class="column-half">Address:</div>
                    <div class="column-half">@Html.DisplayFor(m => m.EntryCustomsOffice.Address)</div>
                </div>
            </div>
        }
        else
        {
            <div class="overview-block-element">
                <div class="grid-row">
                    <div class="column-half">Entry customs office:</div>
                    <div class="column-half">Not required</div>
                </div>
            </div>
        }
        if (!string.IsNullOrWhiteSpace(Model.ExitCustomsOffice.Name))
        {
            <div class="overview-block-element">
                <div class="grid-row">
                    <div class="column-half">Exit customs office:</div>
                    <div class="column-half">
                        @Html.DisplayFor(m => m.ExitCustomsOffice.Name),
                        @Html.DisplayFor(m => m.ExitCustomsOffice.Country.Name)
                    </div>
                </div>
                <div class="grid-row">
                    <div class="column-half">Address:</div>
                    <div class="column-half">@Html.DisplayFor(m => m.ExitCustomsOffice.Address)</div>
                </div>
            </div>
        }
        else
        {
            <div class="overview-block-element">
                <div class="grid-row">
                    <div class="column-half">Exit customs office:</div>
                    <div class="column-half">Not required</div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="overview-block-element">@ViewBag.SectionIncompleteText</div>
    }
</div>