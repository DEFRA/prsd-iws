@model EA.Iws.Web.Areas.NotificationApplication.ViewModels.NotificationApplication.WasteCodeOverviewViewModel
@{
    var codeDefinitionListPartialName = Constants.InternalExportNotificationOverviewSectionsLocation + "_CodeDefinitionList.cshtml";
}

<div class="overview-block">
    @if (Model.AreHCodesCompleted)
    {
        if (Model.CanEditHCodes)
        {
            <div class="change-answer">@Html.ActionLink("Change", "Index", "HCode", new { id = Model.NotificationId }, null)</div>
        }
        if (Model.AreHCodesNotApplicable)
        {
            <div class="overview-block-element">Not applicable</div>
        }
        else
        {
            @Html.Partial(codeDefinitionListPartialName, Model.HCodes)
        }
    }
    else
    {
        <div class="overview-block-element">@ViewBag.SectionIncompleteText</div>
    }
</div>