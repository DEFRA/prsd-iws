@model EA.Iws.Web.Areas.NotificationApplication.ViewModels.NotificationApplication.TransportationViewModel

<div class="overview-block">
    @if (Model.IsCarrierCompleted)
    {
        for (int i = 0; i < Model.Carriers.Count; i++)
        {
            <div class="overview-block-element">
                @Html.DisplayFor(m => m.Carriers[i].Business.Name)
                <br />
                @Html.DisplayFor(m => m.Carriers[i].Address.StreetOrSuburb),
                @Html.DisplayFor(m => m.Carriers[i].Address.TownOrCity)
                @Html.DisplayFor(m => m.Carriers[i].Address.PostalCode),
                @Html.DisplayFor(m => m.Carriers[i].Address.CountryName)
            </div>

            <div class="overview-block-element">
                Organisation type:
                @EA.Prsd.Core.Helpers.EnumHelper.GetDisplayName(Model.Carriers[i].Business.BusinessType)
                <br />
                Company registration:
                @Html.DisplayFor(m => m.Carriers[i].Business.RegistrationNumber)
            </div>

            <div class="overview-block-element">
                @Html.DisplayFor(m => m.Carriers[i].Contact)
            </div>
            if (i < Model.Carriers.Count - 1)
            {
                <hr />
            }
        }
    }
    else
    {
        <div class="overview-block-element">@ViewBag.SectionIncompleteText</div>
    }
</div>