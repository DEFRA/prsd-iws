@model EA.Iws.Core.AddressBook.AddressBookData
@{
    ViewBag.Title = "Address Book - " + Model.Type;
}

<header>
    <h1 class="heading-large">Your address book</h1>
    <p class="subtitle">Manage your address book</p>
</header>

@Html.Partial("_Navigation")

@for (int i = 0; i < Model.AddressRecords.Count; i += 2)
{
    <div class="grid-row form-group">
        @for (int j = i; j < i + 2 && j < Model.AddressRecords.Count; j++)
        {
            <div class="column-half">
                <div class="address-record">
                    <h2 class="heading-small">@Html.DisplayFor(m => m.AddressRecords[j].BusinessData.Name)</h2>
                    <h3>Address</h3>
                    @Html.DisplayFor(m => m.AddressRecords[j].AddressData)
                    <h3>Contact</h3>
                    @Html.DisplayFor(m => m.AddressRecords[j].ContactData)
                    <ul class="inline-list">
                        <li>@Html.ActionLink("Delete", "Index", "Delete", new { id = Model.AddressRecords[j].Id, type = Model.Type }, null)</li>
                    </ul>
                </div>
            </div>
        }
    </div>
}
@if (Model.AddressRecords.Count == 0)
{
    <p>You have no address records for this business type</p>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <button class="button" type="submit">Continue</button>
    </div>
}