@using Resource = EA.Iws.Web.Areas.AdminExportNotificationMovements.Views.CaptureMovement.IndexResources
@model EA.Iws.Web.Areas.AdminExportNotificationMovements.ViewModels.CaptureMovement.SearchViewModel

@{
    ViewBag.Title = Resource.Title;
}

<div class="grid-row">
    <div class="column-two-thirds">
        <h1 class="heading-large">@Resource.MainHeading</h1>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.Gds().ValidationSummary()
            @Html.HiddenFor(m => m.HighestCurrentMovementNumber)

            <div class="form-group @Html.Gds().FormGroupClass(m => m.Number)">
                @Html.Gds().LabelFor(m => m.Number)
                @if (Model.HighestCurrentMovementNumber == 0)
                {
                    @Resource.ZeroMovements
                }
                else
                {
                    @Html.Raw(string.Format(Resource.HighestNumber, Model.HighestCurrentMovementNumber))
                }
                @Html.Gds().ValidationMessageFor(m => m.Number)
                @Html.Gds().TextBoxFor(m => m.Number, new { type = "number", min = 1 })
                &nbsp;&nbsp;&nbsp;<button type="submit" class="button">@Resource.ButtonText</button>
            </div>
        }
    </div>
</div>