<script>
    var prenotificationDateSelector = $("#PrenotificationDate_Date");

    function togglePrenotificationDate(checked) {
        if (checked) {
            prenotificationDateSelector
                .val('')
                .attr('readonly', true)
                .css('background-color', '#DEDEDE')
                .css('color', 'gray');
        } else {
            prenotificationDateSelector
                .attr('readonly', false)
                .css('background-color', 'white')
                .css('color', 'black');
        }
    }

    togglePrenotificationDate($('#HasNoPrenotification').is(':checked'));

    $(function () {
        $("#HasNoPrenotification").click(function () {
            togglePrenotificationDate($('#HasNoPrenotification').is(':checked'));
        });

        $('.container').stickem();
    });

    $(function () {

        $('input:radio').change(function () {
            var selectedVal = this.id;

            if (selectedVal == "Accepted") {
                $("#dvCommentsOptions").show();
                $("#dvRecoveryDate").show();
                $("#dvAcceptReceipt").show();
                $("#dvPartiallyRejectedReceipt").hide();
                $("#dvRejectReceipt").hide();
                $("#dvCommentSelectReasons").hide();
                $("#dvComments").hide();
                $("#dvActualQty").hide();
            } else if (selectedVal == "Partially") {
                $('#dvPartiallyRejectedComments').show();
                $("#dvAcceptReceipt").hide();
                $("#dvPartiallyRejectedReceipt").show();
                $("#dvCommentSelectReasons").show();
                $("#dvCommentsOptions").hide();
                $("#dvComments").hide();
                $("#dvRecoveryDate").show();
                $("#dvActualQty").show();
            } else if (selectedVal == "Rejected") {
                $("#dvAcceptReceipt").hide();
                $("#dvRejected").show();
                $("#dvRejectedQuantity").show();
                $("#dvCommentSelectReasons").show();
                $("#dvCommentsOptions").hide();
                $("#dvComments").hide();
                $("#dvRecoveryDate").hide();
                $("#dvActualQty").hide();
            } else if (selectedVal == "Comments-Yes") {
                $("#dvCommentSelectReasons").show();
                $("#dvComments").show();
            } else if (selectedVal == "Comments-No") {
                $("#dvCommentSelectReasons").hide();
                $("#dvComments").hide();
            }
        });
    });
</script>