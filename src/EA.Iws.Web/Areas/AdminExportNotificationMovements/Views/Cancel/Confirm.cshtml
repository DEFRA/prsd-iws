@model EA.Iws.Web.Areas.AdminExportNotificationMovements.ViewModels.Cancel.ConfirmViewModel
@{
    ViewBag.Title = "Confirm cancellation";
}

<header class="hgroup text">
    <h1 class="govuk-heading-l">Are you sure you want to cancel these prenotifications?</h1>
    Shipments
</header>

<div class="govuk-form-group">
    @foreach (var number in Model.SelectedShipmentNumbers)
    {
        <span class="operation-code-list">@number</span>
    }
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.NotificationId)

    <div class="govuk-form-group">
        <button class="govuk-button" type="submit">Confirm cancellation</button>
    </div>
}

<div class="govuk-form-group">
    @Html.ActionLink("I would like to edit this list", "Index")
</div>

<div class="govuk-form-group">
    @Html.ActionLink("No I don't want to cancel these shipments", "Abandon")
</div>