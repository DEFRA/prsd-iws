@using Resource = EA.Iws.Web.Areas.AdminImportAssessment.Views.Decision.IndexResources
@model EA.Iws.Web.Areas.AdminImportAssessment.ViewModels.Decision.DecisionViewModel

@{
    var boldLabelClass = "form-label-bold";
}

<div class="form-group">
    @Resource.MultipleDateWarning
</div>

<div class="form-group @Html.Gds().FormGroupClass(m => m.ConsentGivenDate)  @Html.Gds().FormGroupClass(m => m.ConsentGivenDate.Day)  @Html.Gds().FormGroupClass(m => m.ConsentGivenDate.Month) @Html.Gds().FormGroupClass(m => m.ConsentGivenDate.Year)">
    <fieldset>
        <div class="form-date">
            @Html.LabelFor(m => m.ConsentGivenDate, new { @class = boldLabelClass })
            @Html.Gds().ValidationMessageFor(m => m.ConsentGivenDate)
            @Html.EditorFor(m => m.ConsentGivenDate)
        </div>
    </fieldset>
</div>

<div class="form-group @Html.Gds().FormGroupClass(m => m.ConsentValidFromDate)  @Html.Gds().FormGroupClass(m => m.ConsentValidFromDate.Day)  @Html.Gds().FormGroupClass(m => m.ConsentValidFromDate.Month) @Html.Gds().FormGroupClass(m => m.ConsentValidFromDate.Year)">
    <fieldset>
        <div class="form-date">
            @Html.LabelFor(m => m.ConsentValidFromDate, new { @class = boldLabelClass })
            @Html.Gds().ValidationMessageFor(m => m.ConsentValidFromDate)
            @Html.EditorFor(m => m.ConsentValidFromDate)
        </div>
    </fieldset>
</div>

<div class="form-group @Html.Gds().FormGroupClass(m => m.ConsentValidToDate)  @Html.Gds().FormGroupClass(m => m.ConsentValidToDate.Day)  @Html.Gds().FormGroupClass(m => m.ConsentValidToDate.Month) @Html.Gds().FormGroupClass(m => m.ConsentValidToDate.Year)">
    <fieldset>
        <div class="form-date">
            @Html.LabelFor(m => m.ConsentValidToDate, new { @class = boldLabelClass })
            @Html.Gds().ValidationMessageFor(m => m.ConsentValidToDate)
            @Html.EditorFor(m => m.ConsentValidToDate)
        </div>
    </fieldset>
</div>

<div class="form-group @Html.Gds().FormGroupClass(m => m.ConsentConditions)">
    @Html.LabelFor(m => m.ConsentConditions, new { @class = boldLabelClass })
    @Html.Gds().ValidationMessageFor(m => m.ConsentConditions)
    @Html.TextAreaFor(m => m.ConsentConditions, new { @class = "text-area two-thirds" })
</div>