@using ViewModelResource = EA.Iws.Web.Areas.AdminImportAssessment.ViewModels.PaymentDetails.PaymentDetailsViewModelResources
@model EA.Iws.Web.Areas.AdminImportAssessment.ViewModels.PaymentDetails.PaymentDetailsViewModel


@using (Html.BeginForm("AddPayment", "AccountManagement", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="grid-row">
        <div class="column-two-thirds">

            <div class="grid-row">
                <div class="column-half">
                    <div class="form-group @Html.Gds().FormGroupClass(m => m.PaymentAmount)">
                        @Html.Gds().LabelFor(m => m.PaymentAmount)
                        @Html.Gds().ValidationMessageFor(m => m.PaymentAmount)
                        @Html.Gds().TextBoxFor(m => m.PaymentAmount, new { @class = "form-control form-control-wide", @title = ViewModelResource.Amount })
                    </div>
                </div>
                <div class="column-half">
                    <div class="form-group @Html.Gds().FormGroupClass(m => m.PaymentMethod)">
                        @Html.Gds().LabelFor(m => m.PaymentMethod)
                        @Html.Gds().ValidationMessageFor(m => m.PaymentMethod)
                        @Html.Gds().DropDownListFor(m => m.PaymentMethod, Model.PaymentMethodsList, new { @class = "form-control form-control-wide", title = ViewModelResource.PaymentMethod })
                    </div>
                </div>
            </div>

            <div class="form-group @Html.Gds().FormGroupClass(m => m.ReceiptNumber)" id="receiptArea">
                @Html.Gds().LabelFor(m => m.ReceiptNumber, false)
                @Html.Gds().ValidationMessageFor(m => m.ReceiptNumber)
                @Html.Gds().TextBoxFor(m => m.ReceiptNumber, new { @MaxLength = 100, @class = "form-control form-control-wide", @title = ViewModelResource.ReceiptNumber })
            </div>
        </div>
    </div>

    <div class="grid-row">
        <div class="column-two-thirds">
            <div class="form-group @Html.Gds().FormGroupClass(m => m.PaymentDate) @Html.Gds().FormGroupClass(m => m.PaymentDate.Day) @Html.Gds().FormGroupClass(m => m.PaymentDate.Month) @Html.Gds().FormGroupClass(m => m.PaymentDate.Year)">
                @Html.LabelFor(m => m.PaymentDate, new { @class = "form-label-bold" })
                @Html.Gds().ValidationMessageFor(m => m.PaymentDate)
                @Html.EditorFor(m => m.PaymentDate)
            </div>

            <div class="form-group @Html.Gds().FormGroupClass(m => m.PaymentComments)">
                @Html.Gds().LabelFor(m => m.PaymentComments)
                @Html.Gds().ValidationMessageFor(m => m.PaymentComments)
                @Html.TextAreaFor(m => m.PaymentComments, new { @MaxLength = 500, @style = "width: 100%; height: 200px", @title = ViewModelResource.Comments })
            </div>
        </div>
    </div>

    <div class="form-group">
        <p> <button class="button" type="submit">@ViewModelResource.SubmitButton</button></p>
    </div>

}
