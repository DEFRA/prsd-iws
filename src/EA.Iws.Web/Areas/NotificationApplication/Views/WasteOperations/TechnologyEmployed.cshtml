@model EA.Iws.Web.Areas.NotificationApplication.ViewModels.WasteOperations.TechnologyEmployedViewModel

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.Gds().ValidationSummary()
    @Html.HiddenFor(m => m.NotificationId)

    <div>
        <header class="hgroup">
            <h1 class="heading-large">What is the technology employed?</h1>
        </header>

        <header class="hgroup">
            <h2 class="heading-medium">
                You have chosen the following operation codes:
            </h2>
        </header>

        @foreach (string code in Model.OperationCodes)
        {
            <span class="operation-code-list">@code</span>
        }

        <header class="hgroup">
            <h2 class="heading-medium">
                Give a brief description of the technologies and processes used to treat the waste on site.
            </h2>
        </header>
        @Html.Gds().HintParagraph("Please limit your answer to 70 characters or less")

        <div class="form-group @Html.Gds().FormGroupClass(m => m.Details)">
            @Html.Gds().ValidationMessageFor(m => m.Details)
            @Html.TextBoxFor(m => m.Details, new { @class="full-width", @MaxLength = 70, @title="Details" })
        </div>

        <header class="hgroup">
            <h1 class="heading-medium">
                If you wish to provide further details, enter them below. (optional)
            </h1>
        </header>

        <div class="form-group @Html.Gds().FormGroupClass(m => m.FurtherDetails)">
            @Html.Gds().ValidationMessageFor(m => m.FurtherDetails)
            @Html.TextAreaFor(m => m.FurtherDetails, new { @style = "width: 100%; height: 200px", @title="Further details" })
        </div>

        <div class="form-group @Html.Gds().FormGroupClass(m => m.AnnexProvided)">
            <label class="block-label" for="AnnexProvided">
                @Html.CheckBoxFor(m => m.AnnexProvided, new { @id = "AnnexProvided" })
                @Html.DisplayNameFor(m => m.AnnexProvided)
            </label>
        </div>

        <div class="form-group">
            <input type="submit" class="button" value="@EA.Iws.Web.Infrastructure.Constants.ContinueButtonText" />
        </div>
    </div>

}
@section scripts
{
    <script>
        $('#AnnexProvided').click(function () {
            if ($('#AnnexProvided').is(':checked')) {
                $('#FurtherDetails').attr('readonly', true);
                $('#FurtherDetails').css('background-color', '#DEDEDE');
                $('#FurtherDetails').css('color', 'gray');
            } else {
                $('#FurtherDetails').attr('readonly', false);
                $('#FurtherDetails').css('background-color', 'white');
                $('#FurtherDetails').css('color', 'black');
            }
        });
    </script>
}
