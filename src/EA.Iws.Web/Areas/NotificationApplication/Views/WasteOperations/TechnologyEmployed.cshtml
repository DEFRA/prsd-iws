@using EA.Iws.Web.Areas.NotificationApplication.Views.WasteOperations
@model EA.Iws.Web.Areas.NotificationApplication.ViewModels.WasteOperations.TechnologyEmployedViewModel
@{
    ViewBag.Title = TechnologyEmployedResources.Title;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.Gds().ValidationSummary()
    @Html.HiddenFor(m => m.NotificationId)

    <div>
        <header class="hgroup">
            <h1 class="govuk-heading-l">@TechnologyEmployedResources.Header</h1>
        </header>

        <div class="govuk-form-group @Html.Gds().FormGroupClass(m => m.Details)">
            @Html.LabelFor(m => m.Details)
            @Html.Gds().ValidationMessageFor(m => m.Details)
            @Html.Gds().HintParagraph(TechnologyEmployedResources.TechnologyHint)
            @Html.TextBoxFor(m => m.Details, new { @class = "govuk-input", @MaxLength = 70, @title = TechnologyEmployedResources.DetailsTitle })
        </div>

        <div class="govuk-form-group @Html.Gds().FormGroupClass(m => m.FurtherDetails)">
            @Html.Gds().LabelFor(m => m.FurtherDetails)
            @Html.Gds().HintParagraph(@TechnologyEmployedResources.FurtherDetailsDescription)
            @Html.Gds().ValidationMessageFor(m => m.FurtherDetails)
            @Html.TextAreaFor(m => m.FurtherDetails, new { @class = "govuk-textarea", rows = "8", @title = TechnologyEmployedResources.FurtherDetailsTitle })
        </div>

        <div class="govuk-form-group @Html.Gds().FormGroupClass(m => m.AnnexProvided)">
            <div class="govuk-checkboxes" data-module="govuk-checkboxes">
                <div class="multiple-choice govuk-checkboxes__item">
                    @Html.CheckBoxFor(m => m.AnnexProvided, new { @id = "AnnexProvided", @class = "govuk-checkboxes__input" })
                    <label class="govuk-label govuk-checkboxes__label" for="AnnexProvided">
                        @Html.DisplayNameFor(m => m.AnnexProvided)
                    </label>
                </div>
            </div>
        </div>

        <div class="govuk-form-group">
            <input type="submit" class="govuk-button" value="@Constants.ContinueButtonText" id="btnSaveAndContinue" />
        </div>
    </div>
}

@section scripts
{
    <script>
        $('#AnnexProvided').click(function () {
            if ($('#AnnexProvided').is(':checked')) {
                $('#FurtherDetails').attr('readonly', true);
                $('#FurtherDetails').css('background-color', '#DEDEDE');
                $('#FurtherDetails').css('color', 'gray');
            } else {
                $('#FurtherDetails').attr('readonly', false);
                $('#FurtherDetails').css('background-color', 'white');
                $('#FurtherDetails').css('color', 'black');
            }
        });
    </script>
}
