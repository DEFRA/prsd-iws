@using EA.Iws.Web.Areas.NotificationApplication.Views.WasteOperations
@model EA.Iws.Web.Areas.NotificationApplication.ViewModels.WasteOperations.OperationCodesViewModel
@{
    ViewBag.Title = RecoveryCodesResources.Title;
}

<header class="hgroup">
    <h1 class="govuk-heading-l">@RecoveryCodesResources.Header</h1>
</header>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.Gds().ValidationSummary()


    @Html.Partial("_OperationCodes", Model)
    
    <div class="govuk-form-group">
        <input type="submit" class="govuk-button" value="@Constants.ContinueButtonText">
    </div>
}
