@using EA.Iws.Web.Areas.NotificationApplication.Views.WasteOperations
@model EA.Iws.Web.Areas.NotificationApplication.ViewModels.WasteOperations.OperationCodesViewModel
@{
    ViewBag.Title = RecoveryCodesResources.Title;
}

<header class="hgroup">
    <h1 class="heading-large">@RecoveryCodesResources.Header</h1>
</header>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.Gds().ValidationSummary()

    <div class="form-group">
        @Html.HiddenFor(m => m.NotificationId)
    </div>

    @Html.Partial("_OperationCodes", Model)

    <div class="form-group">
        <input type="submit" class="button" value="@Constants.ContinueButtonText">
    </div>
}
