@using EA.Iws.Web.Areas.NotificationApplication.Views.ReasonForExport
@model EA.Iws.Web.Areas.NotificationApplication.ViewModels.NotificationApplication.ReasonForExportViewModel

@{
    ViewBag.Title = ReasonForExportResources.Title;
}

<header class="hgroup">
    <h1 class="heading-large">@ReasonForExportResources.Header</h1>
</header>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.Gds().ValidationSummary()

    <div class="form-group @Html.Gds().FormGroupClass(m => m.ReasonForExport)">
        @Html.Gds().HintParagraph(ReasonForExportResources.Hint)
        @Html.Gds().ValidationMessageFor(m => m.ReasonForExport)
        @Html.TextBoxFor(m => m.ReasonForExport, new { @class = "full-width", @MaxLength = 70, @title = ReasonForExportResources.TextboxTitle })
    </div>

    @Html.HiddenFor(m => m.NotificationId)

    <div class="form-group">
        <button class="button" type="submit">@Constants.ContinueButtonText</button>
    </div>
}