@using EA.Iws.Core.AddressBook
@model EA.Iws.Web.Areas.NotificationApplication.ViewModels.Facility.AddFacilityViewModel
@{
    ViewBag.Title = "Add a facility";

    var facilityType = Model.NotificationType.ToString().ToLowerInvariant();
    var message = "This information may be obtained from your " + facilityType + " facility. Enter \"Not applicable\" when no relevant registration number applies";

    ViewBag.SoleTraderRegistrationNumber = message;
    ViewBag.PartnershipRegistrationNumber = message;
    ViewBag.CompanyRegistrationNumber = message;
    ViewBag.SoleTraderRegistrationNumber = message;
    ViewBag.OtherRegistrationNumber = message;
    ViewBag.NonJavascriptMessage = message;
    ViewBag.AddressType = AddressRecordType.Facility;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.Gds().ValidationSummary()
    @Html.HiddenFor(m => m.NotificationId)

    <header class="hgroup">
        <h1 class="heading-large">Add @facilityType facility</h1>
    </header>

    @Html.EditorFor(m => m.Business)

    <h2 class="heading-medium">Their address</h2>
    <hr />
    <p>This should be the site address for the @facilityType facility.</p>
    @Html.EditorFor(m => m.Address)

    <h2 class="heading-medium">Their contact person</h2>
    <hr />
    <p>This should be the contact person for the @facilityType facility.</p>
    @Html.EditorFor(m => m.Contact)

    <div class="form-group no-js-hidden">
        <label class="block-label" for="addressBook">
            @Html.CheckBoxFor(m => m.IsAddedToAddressBook, new { id = "addressBook" })
            Add as new address to address book
        </label>
    </div>

    <button class="button" type="submit">@EA.Iws.Web.Infrastructure.Constants.ContinueButtonText</button>
}