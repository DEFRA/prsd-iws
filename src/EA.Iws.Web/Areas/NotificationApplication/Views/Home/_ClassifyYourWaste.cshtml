@model EA.Iws.Web.Areas.NotificationApplication.ViewModels.NotificationApplication.ClassifyYourWasteViewModel
@{
    var id = Model.NotificationId;
    var viewLocation = Constants.ExternalNotificationOverviewSectionsLocation;
    var headerColspan = ViewBag.CanEditNotification ? 3 : 2;
}

@{
    var chemicalClass = Model.IsChemicalCompositionCompleted ? "over-no-alert" : "over-alert";
    var processClass = Model.IsProcessOfGenerationCompleted ? "over-no-alert" : "over-alert";
    var physicalClass = Model.ArePhysicalCharacteristicsCompleted ? "over-no-alert" : "over-alert";
}

<table class="overview-table">
    <thead>
        <tr>
            <th colspan="@headerColspan">
                <h2 class="heading-medium">Waste classification</h2>
            </th>
        </tr>
    </thead>
    <tbody>
        <tr class = @chemicalClass>
            <td>
                Chemical composition
            </td>
            <td>
                @Html.Partial(viewLocation + "_ChemicalComposition.cshtml")
            </td>
            @if (ViewBag.CanEditNotification)
            {
                <td class="change govuk-link">
                    <a href="@Url.Action("Index", "ChemicalComposition", new { id, backToOverview = true })">
                        Change
                        <span class="screen-reader-text">Chemical composition</span>
                    </a>
                </td>
            }
        </tr>
        <tr class = @processClass>
            <td>
                Process of generation
            </td>
            <td>
                @Html.Partial(viewLocation + "_ProcessOfGeneration.cshtml")
            </td>
            @if (ViewBag.CanEditNotification)
            {
                <td class="change govuk-link">
                    <a href="@Url.Action("Index", "WasteGenerationProcess", new { id, backToOverview = true })">
                        Change
                        <span class="screen-reader-text">Process of generation</span>
                    </a>
                </td>
            }
        </tr>
        <tr class = @physicalClass>
            <td>
                Physical characteristics
            </td>
            <td>
                @Html.Partial(viewLocation + "_PhysicalCharacteristics.cshtml")
            </td>
            @if (ViewBag.CanEditNotification)
            {
                <td class="change govuk-link">
                    <a href="@Url.Action("Index", "PhysicalCharacteristics", new { id, backToOverview = true })">
                        Change
                        <span class="screen-reader-text">Physical characteristics</span>
                    </a>
                </td>
            }
        </tr>
    </tbody>
</table>
