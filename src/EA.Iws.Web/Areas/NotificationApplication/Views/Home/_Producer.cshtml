@model EA.Iws.Web.Areas.NotificationApplication.ViewModels.NotificationApplication.NotificationOverviewViewModel

@if (Model.Progress.IsProducerCompleted)
{
    if (Model.ProducersCompanyNames.Count > 1)
    {
        <details>
            <summary>
                <span class="summary">Generators producers</span>
            </summary>

            <div class="expanded-details">
                @foreach (var pn in Model.ProducersCompanyNames)
                {
                    @pn<br />
                }
            </div>
        </details>
    }
    else
    {
        <div class="list-heading-no-detail column-third">Generator producer</div>
        <div>
            @Model.ProducersCompanyNames[0]<br />
        </div>
    }
}
