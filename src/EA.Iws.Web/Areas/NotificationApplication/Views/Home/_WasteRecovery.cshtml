@model EA.Iws.Web.Areas.NotificationApplication.ViewModels.NotificationApplication.WasteRecoveryViewModel
@{
    var id = Model.NotificationId;
    var viewLocation = Constants.NotificationSummaryViewLocation;
}

<h2 class="heading-medium">Waste recovery</h2>

<div>
    <details>
        <summary>
            Recovery information
            @if (Model.IsWasteRecoveryInformationCompleted)
            {
                <i class="fa fa-check green-text"></i>
            }
            @if (ViewBag.CanEditNotification)
            {
                <span class="edit-link-container">@Html.ActionLink("Edit", "Index", "WasteRecovery", new { id, backToOverview = true }, null)</span>
            }
        </summary>
        <div class="expanded-details">
            <div class="panel-indent">
                @Html.Partial(viewLocation + "_RecoveryInformation.cshtml")
            </div>
        </div>
    </details>
</div>