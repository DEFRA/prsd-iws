@using EA.Iws.Web.Areas.NotificationApplication.Views.TransportRoute
@model EA.Iws.Core.StateOfImport.StateOfImportData
           
<h2 class="govuk-heading-m">@StateOfImportSummaryResources.Header</h2>
@if (Model == null)
{
    <p>@StateOfImportSummaryResources.NoStateOfImport</p>
    <p>@Html.ActionLink("Add state of import", "Index", "StateOfImport", new { id = ViewData["Id"] }, null)</p>
}
else
{
    <table class="govuk-table">
        <thead class="govuk-table__head">
            <tr class="govuk-table__row">
                <th scope="col" class="govuk-table__header">@StateOfImportSummaryResources.ThCountry</th>
                <th scope="col" class="govuk-table__header">@StateOfImportSummaryResources.ThCA</th>
                <th scope="col" class="govuk-table__header">@StateOfImportSummaryResources.ThPort</th>
                <th scope="col" class="govuk-table__header">Action</th>
            </tr>
        </thead>
        <tbody class="govuk-table__body">
            <tr class="govuk-table__row">
                <td class="govuk-table__cell">@Html.DisplayFor(m => m.Country.Name)</td>
                <td class="govuk-table__cell">@Html.DisplayFor(m => m.CompetentAuthority.Code) - @Html.DisplayFor(m => m.CompetentAuthority.Name)</td>
                <td class="govuk-table__cell">@Html.DisplayFor(m => m.EntryPoint.Name)</td>
                <td class="govuk-table__cell">@Html.ActionLink(StateOfImportSummaryResources.Edit, "Index", "StateOfImport", new { id = ViewData["Id"], backToOverview = ViewData["BackToOverview"] }, null)</td>
            </tr>
        </tbody>
    </table>
}
