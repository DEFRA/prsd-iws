@model EA.Iws.Core.StateOfExport.StateOfExportData
           
<h3 class="heading-medium">State of export</h3>
<div class="colored-header-bar"></div>
@if (Model == null)
{
    <p>No state of export has been added.</p>
    <p>@Html.ActionLink("Add state of export", "Index", "StateOfExport", new { id = ViewData["Id"] }, null)</p>
}
else
{
    <table>
        <thead>
            <tr>
                <th>Country</th>
                <th>Competent authority</th>
                <th>Port or border crossing</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Html.DisplayFor(m => m.Country.Name)</td>
                <td>@Html.DisplayFor(m => m.CompetentAuthority.Code) - @Html.DisplayFor(m => m.CompetentAuthority.Name)</td>
                <td>@Html.DisplayFor(m => m.ExitPoint.Name)</td>
                <th>@Html.ActionLink("Edit", "Index", "StateOfExport", new { id = ViewData["Id"], backToOverview = ViewData["BackToOverview"] }, null)</th>
            </tr>
        </tbody>
    </table>
}