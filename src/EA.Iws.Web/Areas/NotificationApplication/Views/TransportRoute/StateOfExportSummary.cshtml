@using EA.Iws.Web.Areas.NotificationApplication.Views.TransportRoute
@model EA.Iws.Core.StateOfExport.StateOfExportData
           
<h2 class="govuk-heading-m">@StateOfExportSummaryResources.Header</h2>
@if (Model == null)
{
    <p>@StateOfExportSummaryResources.NoStateOfExport</p>
    <p>@Html.ActionLink(StateOfExportSummaryResources.Add, "Index", "StateOfExport", new { id = ViewData["Id"] }, null)</p>
}
else
{
    <table class="govuk-table">
        <thead class="govuk-table__head">
            <tr class="govuk-table__row">
                <th scope="col" class="govuk-table__header">@StateOfExportSummaryResources.ThCountry</th>
                <th scope="col" class="govuk-table__header">@StateOfExportSummaryResources.ThCA</th>
                <th scope="col" class="govuk-table__header">@StateOfExportSummaryResources.ThPort</th>
                <th scope="col" class="govuk-table__header">Action</th>
            </tr>
        </thead>
        <tbody class="govuk-table__body">
            <tr class="govuk-table__row">
                <td class="govuk-table__cell">@Html.DisplayFor(m => m.Country.Name)</td>
                <td class="govuk-table__cell">@Html.DisplayFor(m => m.CompetentAuthority.Code) - @Html.DisplayFor(m => m.CompetentAuthority.Name)</td>
                <td class="govuk-table__cell">@Html.DisplayFor(m => m.ExitPoint.Name)</td>
                <td class="govuk-table__cell">@Html.ActionLink(StateOfExportSummaryResources.Edit, "Index", "StateOfExport", new { id = ViewData["Id"], backToOverview = ViewData["BackToOverview"] }, null)</td>
            </tr>
        </tbody>
    </table>
}