@model EA.Iws.Web.Areas.NotificationApplication.ViewModels.Producer.EditProducerViewModel
@{
    ViewBag.Title = "Waste Generator(s) - Producer(s)";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.Gds().ValidationSummary()
    @Html.HiddenFor(m => m.NotificationId)
    @Html.HiddenFor(m => m.ProducerId)

    <header class="hgroup">
        <h1 class="heading-large">Add waste generator - producer</h1>
    </header>

    @Html.Partial("_BusinessType", Model)

    <h2 class="heading-medium">Address</h2>
    <hr />
    <p>This should be the site address for the waste generator-producer.</p>
    @Html.EditorFor(m => m.Address)

    <h2 class="heading-medium">Contact person</h2>
    <hr />
    @Html.EditorFor(m => m.Contact)

    <div class="form-group no-js-hidden">
        <label class="block-label" for="addressBook">
            @Html.CheckBoxFor(m => m.IsAddedToAddressBook, new { id = "addressBook" })
            Add as new address to address book
        </label>
    </div>

    <button class="button" type="submit">@Constants.ContinueButtonText</button>
}