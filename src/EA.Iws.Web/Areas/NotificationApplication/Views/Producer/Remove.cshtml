@model EA.Iws.Web.Areas.NotificationApplication.ViewModels.Producer.RemoveProducerViewModel
@{
    ViewBag.Title = "Remove a waste generator-producer";
}

<h1 class="heading-large">Remove waste generator - producer</h1>

@if (string.IsNullOrWhiteSpace(ViewBag.Error))
{
    using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.Gds().ValidationSummary()
        @Html.HiddenFor(m => m.NotificationId)
        @Html.HiddenFor(m => m.ProducerId)

        <p>You are about to remove @Model.ProducerName as a producer from this notification.</p>

        <button class="button" type="submit">@EA.Iws.Web.Infrastructure.Constants.ContinueButtonText</button>
    }
}
else
{
    <p>@ViewBag.Error</p>
    <p>@Html.ActionLink("Change site of export", "SiteOfExport", "Producer", 
        new { id = Model.NotificationId, backToList = true, backToOverview = ViewBag.BackToOverview }, new { @class = "button" })</p>
}

<p>@Html.ActionLink("Back to producers", "List", "Producer", new { id = Model.NotificationId, backToOverview = ViewBag.BackToOverview }, null)</p>