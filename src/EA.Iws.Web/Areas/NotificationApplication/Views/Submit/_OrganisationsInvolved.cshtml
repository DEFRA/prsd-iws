@model EA.Iws.Web.Areas.NotificationApplication.ViewModels.NotificationApplication.NotificationOverviewViewModel
@{
    var id = Model.NotificationId;
    var disposalOrRecovery = Model.NotificationType;
}
<h2 class="heading-medium">Organisations involved</h2>
<hr />
<div>
    <details>
        <summary>
            Exporter-notifier
            <span class="edit-link-container">@Html.ActionLink("Edit", "Index", "Exporter", new { id }, null)</span>
        </summary>
        <div class="expanded-details">
            <div class="panel-indent">
                <p>@Html.DisplayFor(m => m.ExporterCompanyName)</p>
            </div>
        </div>
    </details>
    <details>
        <summary>
            Generator-producer
            <span class="edit-link-container">@Html.ActionLink("Edit", "List", "Producer", new { id }, null)</span>
        </summary>
        <div class="expanded-details">
            <div class="panel-indent">
                <ul>
                    @for (int i = 0; i < Model.ProducersCompanyNames.Count; i++)
                    {
                        <li>@Html.DisplayFor(m => m.ProducersCompanyNames[i])</li>
                    }
                </ul>
            </div>
        </div>
    </details>
    <details>
        <summary>
            Importer-consignee
            <span class="edit-link-container">@Html.ActionLink("Edit", "Index", "Importer", new { id }, null)</span>
        </summary>
        <div class="expanded-details">
            <div class="panel-indent">
                <p>@Html.DisplayFor(m => m.ImporterCompanyName)</p>
            </div>
        </div>
    </details>
    <details>
        <summary>
            @disposalOrRecovery-facilities
            <span class="edit-link-container">@Html.ActionLink("Edit", "List", "Facility", new { id }, null)</span>
        </summary>
        <div class="expanded-details">
            <div class="panel-indent">
                <ul>
                    @for (int i = 0; i < Model.FacilitiesCompanyNames.Count; i++)
                    {
                        <li>@Html.DisplayFor(m => m.FacilitiesCompanyNames[i])</li>
                    }
                </ul>
            </div>
        </div>
    </details>
</div>