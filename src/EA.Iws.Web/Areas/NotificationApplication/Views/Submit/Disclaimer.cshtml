@using EA.Iws.Core.Notification
@using EA.Iws.Web.Areas.NotificationApplication.Views.Submit
@model EA.Iws.Web.Areas.NotificationApplication.ViewModels.NotificationApplication.DisclaimerViewModel
@{
    ViewBag.Title = DisclaimerResources.Title;
    Layout = "~/Views/Shared/_Layout.GovUK.Sections.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.Gds().ValidationSummary()
    @Html.HiddenFor(m => m.Id)

    <header class="hgroup">
        <p class="heading-large">@DisclaimerResources.Header</p>
    </header>

    <p class="text">
        @DisclaimerResources.Paragraph1
    </p>
    <p class="text">
        @DisclaimerResources.Paragraph2
    </p>

	<div class="form-group">
		<details>
			<summary>
				<h2 class="summary heading-xsmall" data-track="disclosure" data-category="Data notice" data-action="Read">Read our privacy notice</h2>
			</summary>
			<div class="panel">
				@Html.Partial("_IwsStandardDataNotice")
			</div>
		</details>
	</div>

	<div class="form-group @Html.Gds().FormGroupClass(m => m.TermsAndConditions)">
		<fieldset>
			<div>@Html.Gds().ValidationMessageFor(m => m.TermsAndConditions)</div>
			<div class="multiple-choice">
				@Html.CheckBoxFor(m => m.TermsAndConditions)
				<label for="@Html.IdFor(m => m.TermsAndConditions)">
					@DisclaimerResources.Accept
				</label>
			</div>
		</fieldset>
	</div>
	<div class="form-group">
		<input type="submit" class="button" value="@DisclaimerResources.Confirm" data-track="element" data-category="Export notification" data-action="Submit" />
	</div>
}
