@using EA.Iws.Core.Notification
@using EA.Iws.Web.Areas.NotificationApplication.Views.Submit
@model EA.Iws.Web.Areas.NotificationApplication.ViewModels.NotificationApplication.DisclaimerViewModel
@{
    ViewBag.Title = DisclaimerResources.Title;
    Layout = "~/Views/Shared/_Layout.GovUK.Sections.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.Gds().ValidationSummary()
    @Html.HiddenFor(m => m.Id)

    <header class="hgroup">
        <p class="govuk-heading-l">@DisclaimerResources.Header</p>
    </header>

    <p class="text">
        @DisclaimerResources.Paragraph1
    </p>
    <p class="text">
        @DisclaimerResources.Paragraph2
    </p>

    <div class="govuk-form-group">
        <details class="govuk-details" data-module="govuk-details">
            <summary class="govuk-details__summary">
                <span class="govuk-details__summary-text">
                    Read our privacy notice
                </span>
            </summary>
            <div class="govuk-details__text">
                @Html.Partial("_IwsStandardDataNotice")
            </div>
        </details>
    </div>
    
    <div class="govuk-form-group @Html.Gds().FormGroupClass(m => m.TermsAndConditions)">
        <fieldset class="govuk-fieldset">
            <div class="govuk-checkboxes" data-module="govuk-checkboxes">
                <div>@Html.Gds().ValidationMessageFor(m => m.TermsAndConditions)</div>
                <div class="multiple-choice govuk-checkboxes__item">
                    @Html.CheckBoxFor(m => m.TermsAndConditions, new { @class="govuk-checkboxes__input"})
                    <label class="govuk-label govuk-checkboxes__label" for="@Html.IdFor(m => m.TermsAndConditions)">
                        @DisclaimerResources.Accept
                    </label>
                </div>
            </div>
        </fieldset>
    </div>
    <div class="govuk-form-group">
        <input type="submit" class="govuk-button" value="@DisclaimerResources.Confirm" data-track="element" data-category="Export notification" data-action="Submit" />
    </div>
}
