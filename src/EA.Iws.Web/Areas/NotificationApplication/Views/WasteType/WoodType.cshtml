@model EA.Iws.Web.Areas.NotificationApplication.ViewModels.WasteType.ChemicalCompositionConcentrationLevelsViewModel
@{
    ViewBag.Title = "Waste Code";
}
<header class="hgroup">
    <div class="form-group">
        @Html.Gds().HintParagraph("Step 2 of 3")
    </div>
    <h1 class="heading-large">What type of wood?</h1>
</header>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.Gds().ValidationSummary()
    @Html.HiddenFor(m => m.NotificationId)
    @Html.HiddenFor(m => m.ChemicalCompositionType)

    <div>Brief description of the type of wood</div>
    <div class="form-group @Html.Gds().FormGroupClass(m => m.Description)">
        @Html.Gds().ValidationMessageFor(m => m.Description)
        @Html.Gds().HintSpan("Limit your answer to 70 characters or less")
        @Html.Gds().TextBoxFor(m => m.Description, new { @MaxLength = 70, @title = "Wood waste type description" })
    </div>
    <h2 class="heading-small">What is the chemical composition of the waste?</h2>
    <p>
        Concentration levels of the constituents present in the waste.
        Enter minimum and maximum as a weight by weight percentage (%), you can enter NA where not applicable.
    </p>
    <div class="grid-row form-group">
        <div class="column-half">
            @for (var i = 0; i < Model.WasteComposition.Count; i++)
            {
                <div class="form-group @Html.Gds().FormGroupClass(m => m.WasteComposition[i])">
                    @Html.Gds().ValidationMessageFor(m => m.WasteComposition[i])
                    <div class="grid-row">
                        <div class="column-two-thirds">
                            @EA.Prsd.Core.Helpers.EnumHelper.GetDescription(Model.WasteComposition[i].ChemicalCompositionCategory)
                        </div>
                    </div>
                    <div class="grid-row">
                        <div class="column-half">
                            @Html.Gds().TextBoxFor(m => m.WasteComposition[i].MinConcentration, new { placeholder = "min %", title = "Min concentration" })
                            @Html.Gds().TextBoxFor(m => m.WasteComposition[i].ChemicalCompositionCategory, new { type = "hidden" })
                        </div>
                        <div class="column-half">
                            @Html.Gds().TextBoxFor(m => m.WasteComposition[i].MaxConcentration, new { placeholder = "max %", title = "Max concentration" })
                            @Html.Gds().TextBoxFor(m => m.WasteComposition[i].Constituent, new { type = "hidden", @Value = @EA.Prsd.Core.Helpers.EnumHelper.GetDescription(Model.WasteComposition[i].ChemicalCompositionCategory) })
                        </div>
                    </div>
                </div>
            }
            <div class="form-group">
                Add other constituents
                <div class="form-hint">Enter any other significant components in the waste.  Enter one component per field, add more if required.</div>
                @for (int i = 0; i < Model.OtherCodes.Count; i++)
                {
                    <div class="form-group @Html.Gds().FormGroupClass(m => m.OtherCodes[i])">
                        @Html.Gds().ValidationMessageFor(m => m.OtherCodes[i])
                        <div class="grid-row">
                            <div class="column-two-thirds form-group">
                                <input name="OtherCodes[@i].Constituent" value="@Model.OtherCodes[i].Constituent" title="Other constituent" />
                            </div>
                        </div>
                        <div class="grid-row">
                            <div class="column-half">
                                <input name="OtherCodes[@i].MinConcentration" style="width:65px" placeholder="min %" value="@Model.OtherCodes[i].MinConcentration" title="Min concentration" />
                            </div>
                            <div class="column-half">
                                <input name="OtherCodes[@i].MaxConcentration" style="width:65px" placeholder="max %" value="@Model.OtherCodes[i].MaxConcentration" title="Max concentration" />
                                <input name="OtherCodes[@i].ChemicalCompositionCategory" type="hidden" value="@Model.OtherCodes[i].ChemicalCompositionCategory" />
                            </div>
                        </div>
                    </div>
                }
                <button class="link-submit" type="submit" name="Command" value="add">Add</button>
            </div>
        </div>
    </div>

    
    <div class="form-group">
        <button class="button" name="Command" value="continue" type="submit">@EA.Iws.Web.Infrastructure.Constants.ContinueButtonText</button>
    </div>
}