@using EA.Iws.Web.Areas.NotificationApplication.Views.WasteRecovery
@model EA.Iws.Web.Areas.NotificationApplication.ViewModels.WasteRecovery.PercentageViewModel
@{
    ViewBag.Title = PercentageResources.Title;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <header class="hgroup">
        <h1 class="heading-large">@PercentageResources.Header</h1>
    </header>

    @Html.Gds().ValidationSummary()
    
    <div class="form-group @Html.Gds().FormGroupClass(m => m.PercentageRecoverable)">
        @Html.Gds().LabelFor(m => m.PercentageRecoverable)
        @Html.Gds().ValidationMessageFor(m => m.PercentageRecoverable)
        @Html.Gds().TextBoxFor(m => m.PercentageRecoverable, new { type = "number", min = 0, max = 100, step = 0.01, @class ="form-control form-control-1-4" })&nbsp;%
    </div>

    <div class="form-group">
        <button class="button" type="submit">@Constants.ContinueButtonText</button>
    </div>
}