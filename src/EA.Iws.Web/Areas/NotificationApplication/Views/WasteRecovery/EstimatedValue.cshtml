@using EA.Iws.Web.Areas.NotificationApplication.Views.WasteRecovery
@model EA.Iws.Web.Areas.NotificationApplication.ViewModels.WasteRecovery.EstimatedValueViewModel
@{
    ViewBag.Title = EstimatedValueResources.Title;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.PercentageRecoverable)
    @Html.HiddenFor(m => m.ShipmentInfoUnits)

    <header class="hgroup">
        <h1 class="govuk-heading-l">@EstimatedValueResources.Header</h1>
    </header>

    @Html.Gds().ValidationSummary()

    <div class="govuk-form-group @Html.Gds().FormGroupClass(m => m.Amount)">
        @Html.Gds().LabelFor(m => m.Amount, false)
        @Html.Gds().ValidationMessageFor(m => m.Amount)
        @Html.Gds().TextBoxFor(m => m.Amount)
    </div>

    <div class="govuk-form-group @Html.Gds().FormGroupClass(m => m.SelectedUnits)">
        @Html.Gds().LabelFor(m => m.SelectedUnits, false)
        @Html.Gds().ValidationMessageFor(m => m.SelectedUnits)
        @Html.Gds().DropDownListFor(m => m.SelectedUnits, Model.UnitSelectList)
    </div>

    <div class="govuk-form-group">
        <button class="govuk-button" type="submit">@Constants.ContinueButtonText</button>
    </div>
}