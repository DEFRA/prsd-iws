@using EA.Iws.Web.Areas.NotificationApplication.Views.WasteRecovery
@model EA.Iws.Web.Areas.NotificationApplication.ViewModels.WasteRecovery.RecoveryCostViewModel
@{
    ViewBag.Title = RecoveryCostResources.Title;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.PercentageRecoverable)
    @Html.HiddenFor(m => m.EstimatedValueAmount)
    @Html.HiddenFor(m => m.EstimatedValueUnit)

    <header class="hgroup">
        <h1 class="heading-large">@RecoveryCostResources.Header</h1>
    </header>

    @Html.Gds().ValidationSummary()

    <div class="form-group @Html.Gds().FormGroupClass(m => m.Amount)">
        @Html.Gds().LabelFor(m => m.Amount, false)
        @Html.Gds().ValidationMessageFor(m => m.Amount)
        <div class="grid-row">
            <div class="column-third">
                @Html.Gds().TextBoxFor(m => m.Amount, new { @class = "form-control form-control-wide" })
            </div>
            <div class="column-third">
                @Html.Gds().DropDownListFor(m => m.SelectedUnits, Model.UnitSelectList, new { @class = "form-control form-control-wide" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <button class="button" type="submit">@Constants.ContinueButtonText</button>
    </div>
}