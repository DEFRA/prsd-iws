@model EA.Iws.Web.Areas.NotificationApplication.ViewModels.WasteRecovery.DisposalMethodViewModel
@{
    ViewBag.Title = "Method of Disposal for Recoverable Material";
}

@using (Html.BeginForm("DisposalMethod", "WasteRecovery", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.Gds().ValidationSummary()
    @Html.HiddenFor(m => m.NotificationId)
    @Html.HiddenFor(m => m.Amount)
    @Html.HiddenFor(m => m.Units)

    <header class="hgroup">
        <h1 class="heading-large">What is the planned method of disposal for the non-recoverable fraction after recovery?</h1>
    </header>

    <div class="form-group @Html.Gds().FormGroupClass(m => m.DisposalMethod)">
        @Html.Gds().HintParagraph("For example: Incineration/landfill/chemical or biological treatment (in a maximum of 40 characters)")
        @Html.Gds().ValidationMessageFor(m => m.DisposalMethod)
        @Html.Gds().TextBoxFor(m => m.DisposalMethod, new {@MaxLength = 40 })
    </div>

    <div class="form-group">
        <button class="button" type="submit">@Constants.ContinueButtonText</button>
    </div>
}