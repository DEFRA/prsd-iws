@using EA.Iws.Web.Areas.NotificationApplication.Views.WasteRecovery
@model EA.Iws.Web.Areas.NotificationApplication.ViewModels.WasteRecovery.DisposalCostViewModel
@{
    ViewBag.Title = DisposalCostResources.Title;
}

@using (Html.BeginForm("DisposalCost", "WasteRecovery", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.Gds().ValidationSummary()
    @Html.HiddenFor(m => m.NotificationId)
    @Html.HiddenFor(m => m.DisposalMethod)
    @Html.HiddenFor(m => m.ShipmentInfoUnits)

    <header class="hgroup">
        <h1 class="heading-large">@DisposalCostResources.Header</h1>
    </header>

    <div class="form-group @Html.Gds().FormGroupClass(m => m.Amount)">
        @Html.Gds().LabelFor(m => m.Amount)
        @Html.Gds().ValidationMessageFor(m => m.Amount)
        @Html.Gds().TextBoxFor(m => m.Amount)
    </div>

    <div class="form-group @Html.Gds().FormGroupClass(m => m.Units)">
        @Html.Gds().LabelFor(m => m.Units)
        @Html.Gds().ValidationMessageFor(m => m.Units)
        @Html.Gds().DropDownListFor(m => m.Units, Model.PossibleUnits)
    </div>

    <div class="form-group">
        <button class="button" type="submit">@Constants.ContinueButtonText</button>
    </div>
}