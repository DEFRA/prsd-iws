@model EA.Iws.Requests.Notification.WhatToDoNextData
@{
    ViewBag.Title = "Upload your annexes";
    Layout = "~/Views/Shared/_Layout.GovUK.Sections.cshtml";
}

<div class="grid-row column-two-thirds">
    <header class="hgroup">
        <h1 class="heading-large">Upload your annexes</h1>
    </header>

    <p>You've indicated that you'd like to provide some information as separate annexes to your notification.</p>

    <p>To help our automatic annex generation process, please make sure that you state the notification and annex numbers at the start of each document.</p>
</div>

<div>
    @Html.ActionLink("Continue", "Print", "WhatToDoNext", new { id = Model.Id, area = "NotificationApplication" }, new { @class = "button" })
</div>

<div class="form-group">
    @Html.ActionLink("Go to notification options", "Index", "Options", new { id = Model.Id, area = "NotificationApplication" }, null)
</div>

