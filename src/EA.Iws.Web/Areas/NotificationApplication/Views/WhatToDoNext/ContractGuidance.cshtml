@model EA.Iws.Requests.Notification.WhatToDoNextData
@using Resource = EA.Iws.Web.Areas.NotificationApplication.Views.WhatToDoNext.ContractGuidanceResources

@{
    ViewBag.Title = @Resource.TabTitle;
    Layout = "~/Views/Shared/_Layout.GovUK.Sections.cshtml";
}

<div class="grid-row">
    <div class="column-two-thirds">
        <header class="hgroup">
            <h1 class="govuk-heading-l">@Resource.Title</h1>
        </header>

        <div class="govuk-form-group">
            <p>
                @Resource.BodyPara1
            </p>
            <p>
               @Resource.BodyPara2
            </p>
        </div>
    </div>
</div>

<div class="govuk-form-group">
    @Html.ActionLink("Continue", "PostageLabel", "WhatToDoNext", new { id = Model.Id, area = "NotificationApplication" }, new { @class = "govuk-button" })
</div>

<div>
    @Html.ActionLink(@Resource.NotificationOptionLinkText, "Index", "Options", new { id = Model.Id, area = "NotificationApplication" }, null)
</div>

