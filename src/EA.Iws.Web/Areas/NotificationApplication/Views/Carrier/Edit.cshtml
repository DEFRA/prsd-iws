@model EA.Iws.Web.Areas.NotificationApplication.ViewModels.Carrier.EditCarrierViewModel
@{
    ViewBag.Title = "Intended carrier(s)";
}

@using (Html.BeginForm("Edit", "Carrier", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.Gds().ValidationSummary()
    @Html.HiddenFor(m => m.NotificationId)
    @Html.HiddenFor(m => m.CarrierId)

    <header class="hgroup">
        <h1 class="heading-large">Add intended carrier</h1>
    </header>

    @Html.Partial("CarrierBusinessTypeViewModel", Model)

    <h2 class="heading-medium">Address</h2>
    <hr />

    @Html.EditorFor(m => m.Address)

    <h2 class="heading-medium">Contact person</h2>
    <hr />

    @Html.EditorFor(m => m.Contact)

    <button class="button" type="submit">@EA.Iws.Web.Infrastructure.Constants.ContinueButtonText</button>
}