@model EA.Iws.Web.Areas.NotificationApplication.ViewModels.Carrier.AddCarrierViewModel

@{
    ViewBag.Title = "Intended carrier(s)";

    var message = @"This may be the waste carrier licence number that allows the intend carrier to transport waste across land.
Enter all waste carrier licence numbers that apply for the whole journey. Enter ""Not applicable"" where no relevant registration number applies.";

    ViewBag.SoleTraderRegistrationNumber = message;
    ViewBag.PartnershipRegistrationNumber = message;
    ViewBag.CompanyRegistrationNumber = message;
    ViewBag.SoleTraderRegistrationNumber = message;
    ViewBag.OtherRegistrationNumber = message;
    ViewBag.NonJavascriptMessage = message;
}

@using (Html.BeginForm("Add", "Carrier", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.Gds().ValidationSummary()
    @Html.HiddenFor(m => m.NotificationId)

    <header class="hgroup">
        <h2 class="heading-large">Add intended carrier</h2>
        <div class="colored-header-bar"></div>
    </header>


    @Html.EditorFor(m => m.Business)

    <h2 class="heading-medium">Address</h2>
    <hr />

    @Html.EditorFor(m => m.Address)

    <h2 class="heading-medium">Contact person</h2>
    <hr />

    @Html.EditorFor(m => m.Contact)

    <button class="button" type="submit">Continue</button>
}