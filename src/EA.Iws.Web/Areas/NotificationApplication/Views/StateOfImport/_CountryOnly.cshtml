@using EA.Iws.Web.Areas.NotificationApplication.Views.StateOfImport
@using Resources = EA.Iws.Web.Areas.NotificationApplication.Views.StateOfImport.StateOfImportResources
@model EA.Iws.Web.Areas.NotificationApplication.ViewModels.StateOfImport.StateOfImportViewModel

<div class="form-group @Html.Gds().FormGroupClass(m => m.CountryId)">
    @Html.Gds().LabelFor(m => m.CountryId, new { @class = "form-label-bold" })
    @Html.Gds().HintParagraph(StateOfImportResources.CountryHint)
    @Html.HiddenFor(m => m.NotificationCompetentAuthority)
    @Html.Gds().ValidationMessageFor(model => model.CountryId)

    @if (Model.CountryId != null)
    {
        @Html.Gds().DropDownListFor(m => m.CountryId, Model.Countries, new { data_select_box = "true" })
    }
    else
    {
        @Html.Gds().DropDownListFor(m => m.CountryId, Model.Countries, string.Empty, new { title = StateOfImportResources.ExitCountry, data_select_box = "true" })
    }
</div>
@Html.Partial("_CountryNotListed")

<button class="button" type="submit" value="country" name="submit">@Constants.ContinueButtonText</button>