@using EA.Iws.Core.Shared
@model EA.Iws.Web.Areas.Movement.ViewModels.OperationCompleteViewModel
@{
    ViewBag.Title = "Recovery / disposal complete";
    Layout = "~/Areas/Movement/Views/Shared/_LayoutReceipt.cshtml";
    string operation = Model.NotificationType == NotificationType.Recovery ? "recovery" : "disposal";
}

<header class="hgroup">
    <h1 class="heading-large">Your certificate of @operation is now complete</h1>
    <h2 class="heading-small">Before you continue you need to:</h2>
</header>

<div>
    <p>Upload the signed copy of the certificate of @operation.</p>
</div>

<div class="form-group-compound">
    <p><button class="button" type="submit">Upload now</button></p>
</div>

<div class="form-group">
    <p>
        @Html.ActionLink("Go to notification options",
            "ApprovedNotification",
            "Applicant",
            new { area = string.Empty, id = Model.NotificationId },
            null)
    </p>
</div>