@using Resource = EA.Iws.Web.Areas.Movement.Views.Submit.SuccessResources
@model EA.Iws.Web.Areas.Movement.ViewModels.SuccessViewModel
@{
    ViewBag.Title = Resource.Title;
}

<header class="hgroup">
    <h1 class="heading-large">@Resource.MainHeading @Model.MovementNumber</h1>
</header>
<p>@Resource.BodyText</p>

@Html.HiddenFor(m => m.NotificationId)


    <p>
        @Html.ActionLink("Continue",
            "Index",
            "Home",
            new { area = "NotificationMovements", notificationId = Model.NotificationId },
            new { @class = "button"})
    </p>


    <p>
        @Html.ActionLink("Go to notification options",
            "ApprovedNotification",
            "Applicant",
            new { area = string.Empty, id = Model.NotificationId },
            null)
    </p>
