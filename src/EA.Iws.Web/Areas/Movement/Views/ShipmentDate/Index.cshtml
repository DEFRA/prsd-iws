@using EA.Prsd.Core.Web.Mvc.RazorHelpers
@model EA.Iws.Web.Areas.Movement.ViewModels.ShipmentDateViewModel

<header class="hgroup">
    <h2 class="heading-large">What is the actual date of shipment?</h2>
</header>

@using (Html.BeginForm("Index", "ShipmentDate", FormMethod.Post))
{

    @Html.AntiForgeryToken()
    @Html.Gds().ValidationSummary()
    @Html.HiddenFor(m => m.MovementId)
    @Html.HiddenFor(m => m.StartDate)
    @Html.HiddenFor(m => m.EndDate)

    <p>
        You can schedule your shipments from 
        @Html.Gds().DisplayShortDateRangeFor(m => m.StartDate, m => m.EndDate).
    </p>

    <div class="form-group @Html.Gds().FormGroupClass(m => m.Day) @Html.Gds().FormGroupClass(m => m.Month) @Html.Gds().FormGroupClass(m => m.Year)">
        <fieldset>
            <legend>
                <span class="form-label">Departure date</span>
            </legend>

            <div class="form-date">
                @Html.Gds().HintParagraph(Model.DateHintText) 
                @Html.Gds().ValidationMessageFor(m => m.Day)
                @Html.Gds().ValidationMessageFor(m => m.Month)
                @Html.Gds().ValidationMessageFor(m => m.Year)
                <div class="form-group form-group-day">
                    @Html.Gds().LabelFor(m => m.Day)
                    @Html.Gds().TextBoxFor(m => m.Day, new { type = "number", min = "1", max = "31", pattern = "[0-9]*" })
                </div>
                <div class="form-group form-group-month">
                    @Html.Gds().LabelFor(m => m.Month)
                    @Html.Gds().TextBoxFor(m => m.Month, new { type = "number", min = "1", max = "12", pattern = "[0-9]*" })
                </div>
                <div class="form-group form-group-year">
                    @Html.Gds().LabelFor(m => m.Year)
                    @Html.Gds().TextBoxFor(m => m.Year, new { type = "number", min = "2015", pattern = "[0-9]*" })
                </div>
            </div>
        </fieldset>
    </div>

    <div class="form-group">
        <p>
            <button class="button" type="submit">@EA.Iws.Web.Infrastructure.Constants.ContinueButtonText</button>
        </p>
    </div>
}