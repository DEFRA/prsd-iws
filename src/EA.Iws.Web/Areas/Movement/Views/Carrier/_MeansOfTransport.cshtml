@model EA.Iws.Web.Areas.Movement.ViewModels.Carrier.MeansOfTransportViewModel

<div class="form-group">
    <table title="Notification means of transport">
        <thead>
            <tr>
                <th>The original means of transport that you selected:</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    @for (int i = 0; i < Model.NotificationMeansOfTransport.Count; i++)
                    {
                        @Html.DisplayFor(m => m.NotificationMeansOfTransport[i].DisplayName)

                        if (i != Model.NotificationMeansOfTransport.Count - 1)
                        {
                            <text>&#8594;</text>
                        }
                    }
                </td>
            </tr>
        </tbody>
    </table>
</div>