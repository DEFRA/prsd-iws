@model EA.Iws.Web.Areas.Movement.ViewModels.ReceiptCompleteViewModel
@{
    ViewBag.Title = "Receipt complete";
    Layout = "~/Areas/Movement/Views/Shared/_LayoutReceipt.cshtml";
}

<header class="hgroup">
    <h1 class="heading-large">Your certificate of receipt is now complete</h1>
    <h2 class="heading-small">Before you continue, you need to upload the signed copy of the certificate of recovery.</h2>
</header>

@using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.NotificationId)

    <div class="form-group">
        @Html.Gds().LabelFor(x => x.File, showOptionalLabel: false)
        @Html.Gds().TextBoxFor(x => x.File, new { type = "file" })
    </div>

    <div class="form-group-compound">
        <button class="button" type="submit">@Constants.ContinueButtonText</button>
    </div>
}
<div class="form-group">
    <p>
        @Html.ActionLink("Receive another shipment",
         "Receipt",
         "NotificationMovement",
         new { area = string.Empty, id = Model.NotificationId },
         null)
    </p>
    <p>
        @Html.ActionLink("Go to notification options",
            "ApprovedNotification",
            "Applicant",
            new { area = string.Empty, id = Model.NotificationId },
            null)
    </p>
</div>