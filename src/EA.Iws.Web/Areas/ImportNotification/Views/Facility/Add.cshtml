@using EA.Iws.Core.Shared
@using EA.Iws.Web.Areas.AddressBook.Views
@using Resource = EA.Iws.Web.Areas.ImportNotification.Views.Facility.AddResources
@model EA.Iws.Web.Areas.ImportNotification.ViewModels.Facility.FacilityViewModel

@{
    ViewBag.Title = Resource.TabTitle;
}

@{
    var limitedCompanyId = "LimitedCompany" + Model.FacilityId;
    var otherId = "Other" + Model.FacilityId;
}

<h1 class="heading-large">@Html.Raw(string.Format(Resource.Title, Model.NotificationType.ToString().ToLower()))</h1>

@using (Html.BeginForm())
{
    @Html.Gds().ValidationSummary()
    @Html.AntiForgeryToken()

    <h2 class="heading-medium">@Resource.OrganisationHeading</h2>

    <div class="form-group @Html.Gds().FormGroupClass(m => m.BusinessName)">
        @Html.Gds().LabelFor(m => m.BusinessName, false)
        @Html.Gds().ValidationMessageFor(m => m.BusinessName)
        @Html.Gds().TextBoxFor(m => m.BusinessName)
    </div>

    <div class="form-group @Html.Gds().FormGroupClass(m => m.Type)">
        @Html.Gds().LabelFor(m => m.Type, false)
        @Html.Gds().ValidationMessageFor(m => m.Type)
        <fieldset>
            <div class="multiple-choice">
                @Html.RadioButtonFor(m => m.Type, BusinessType.LimitedCompany, new { id = "LimitedCompany" })
                <label for="LimitedCompany">
                    @Resource.LimitedCompanyLabel
                </label>
            </div>

            <div class="multiple-choice">
                @Html.RadioButtonFor(m => m.Type, BusinessType.Other, new { id = "Other" })
                <label for="Other">
                    @Resource.OtherLabel
                </label>
            </div>
            
        </fieldset>
    </div>

    <div class="form-group @Html.Gds().FormGroupClass(m => m.RegistrationNumber)">
        @Html.Gds().LabelFor(m => m.RegistrationNumber)
        @Html.Gds().ValidationMessageFor(m => m.RegistrationNumber)
        @Html.Gds().TextBoxFor(m => m.RegistrationNumber)
    </div>

    @Html.EditorFor(m => m.Address)

    @Html.EditorFor(m => m.Contact)

    <div class="form-group no-js-hidden">
        <div class="multiple-choice">
            @Html.CheckBoxFor(m => m.IsAddedToAddressBook, new { id = "addressBook" })
            <label for="addressBook">
                @AddressBookResources.AddToAddressBook
            </label>
        </div>
    </div>

    <div class="form-group">
        <button class="button" type="submit">@Constants.ContinueButtonText</button>
    </div>
}