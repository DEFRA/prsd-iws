@model EA.Iws.Core.ImportNotification.Summary.InProgressImportNotificationSummary

<details>
    <summary class="block">
        Generator-producer @Html.ActionLink("Change", "Index", "Producer", null, new { @class="right-float" })
    </summary>
    <div class="expanded-details">
        <div class="panel-indent">
            @if (Model.Producer != null && !Model.Producer.IsEmpty())
            {
                <div class="grid-row">
                    <div class="column-half">
                        <dl>
                            @if (!string.IsNullOrWhiteSpace(Model.Producer.Name))
                            {
                                <dt>Organisation name:</dt>
                                <dd>@Html.DisplayFor(m => m.Producer.Name)</dd>
                            }

                            @if (!Model.Producer.Address.IsEmpty())
                            {
                                <dt>Address:</dt>
                                <dd>@Html.DisplayFor(m => m.Producer.Address)</dd>
                            }
                        </dl>
                    </div>
                    <div class="column-half">
                        <dl>
                            @if (!Model.Producer.Contact.IsEmpty())
                            {
                                <dt>Contact:</dt>
                                <dd>@Html.DisplayFor(m => m.Producer.Contact)</dd>
                            }
                            <dt>Are there multiple producers?</dt>
                            <dd>@Html.DisplayFor(m => m.Producer.AreMultiple)</dd>
                        </dl>
                    </div>
                </div>
            }
            else
            {
                <p>@ViewBag.SectionIncompleteText</p>
            }
        </div>
    </div>
</details>