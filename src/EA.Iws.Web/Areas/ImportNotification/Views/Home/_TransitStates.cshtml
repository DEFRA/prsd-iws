@model EA.Iws.Web.Areas.ImportNotification.ViewModels.Home.SummaryTableContainerViewModel

@using Resource = EA.Iws.Web.Areas.ImportNotification.Views.Home.IndexResources

<details>
    <div class="overview-block">
        <div class="overview-block-element">
            @if (Model.Details.TransitStates != null && Model.Details.TransitStates.Count > 0)
            {
                for (int i = 0; i < Model.Details.TransitStates.Count; i++)
                {
                    <dl>
                        <dt>@Resource.CountryText</dt>
                        @if (!string.IsNullOrWhiteSpace(Model.Details.TransitStates[i].CountryName))
                        {
                            <dd>@Model.Details.TransitStates[i].CountryName</dd>
                        }
                        else
                        {
                            <dd>@Resource.UnansweredQuestionPlaceholder</dd>
                        }

                        <dt>@Resource.CompetentAuthorityText</dt>
                        @if (!string.IsNullOrWhiteSpace(Model.Details.TransitStates[i].CompetentAuthorityName))
                        {
                            <dd>@Model.Details.TransitStates[i].CompetentAuthorityCode - @Model.Details.TransitStates[i].CompetentAuthorityName</dd>
                        }
                        else
                        {
                            <dd>@Resource.UnansweredQuestionPlaceholder</dd>
                        }
                        <dt>@Resource.EntryPointText</dt>
                        @if (!string.IsNullOrWhiteSpace(Model.Details.TransitStates[i].EntryPointName))
                        {
                            <dd>@Model.Details.TransitStates[i].EntryPointName</dd>
                        }
                        else
                        {
                            <dd>@Resource.UnansweredQuestionPlaceholder</dd>
                        }

                        <dt>@Resource.ExitPointText</dt>
                        @if (!string.IsNullOrWhiteSpace(Model.Details.TransitStates[i].ExitPointName))
                        {
                            <dd>@Model.Details.TransitStates[i].ExitPointName</dd>
                        }
                        else
                        {
                            <dd>@Resource.UnansweredQuestionPlaceholder</dd>
                        }
                    </dl>

                    if (i < (Model.Details.TransitStates.Count - 1))
                    {
                        <hr />
                    }
                }
            }
            else if (Model.Details.HasNoTransitStates)
            {
                <p>@Resource.NoTransitStatesChoice</p>
            }
            else
            {
                @ViewBag.SectionIncompleteText
            }
        </div>
    </div>
</details>