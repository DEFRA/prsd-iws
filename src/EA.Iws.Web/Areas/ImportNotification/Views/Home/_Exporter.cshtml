@model EA.Iws.Core.ImportNotification.Summary.InProgressImportNotificationSummary

<details>
    <summary class="block">
        Exporter-notifier @Html.ActionLink("Change", "Index", "Exporter", null, new { @class="right-float" })
    </summary>
    <div class="expanded-details">
        <div class="panel-indent">
            @if (Model.Exporter != null && !Model.Exporter.IsEmpty())
            {
                <div class="grid-row">
                    <div class="column-half">
                        <dl>
                            @if (!string.IsNullOrWhiteSpace(Model.Exporter.Name))
                            {
                                <dt>Organisation name:</dt>
                                <dd>@Html.DisplayFor(m => m.Exporter.Name)</dd>
                            }

                            @if (!Model.Exporter.Address.IsEmpty())
                            {
                                <dt>Address:</dt>
                                <dd>@Html.DisplayFor(m => m.Exporter.Address)</dd>
                            }
                        </dl>
                    </div>
                    <div class="column-half">
                        <dl>
                            @if (!Model.Exporter.Contact.IsEmpty())
                            {
                                <dt>Contact:</dt>
                                <dd>@Html.DisplayFor(m => m.Exporter.Contact)</dd>
                            }
                        </dl>
                    </div>
                </div>
            }
            else
            {
                <p>@ViewBag.SectionIncompleteText</p>
            }
        </div>
    </div>
</details>