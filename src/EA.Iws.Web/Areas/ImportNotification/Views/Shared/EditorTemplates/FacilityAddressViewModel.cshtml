@using Resource = EA.Iws.Web.Areas.ImportNotification.Views.Shared.EditorTemplates.FacilityAddressViewModelResources
@model EA.Iws.Web.Areas.ImportNotification.ViewModels.Shared.AddressViewModel

<h3 class="heading-small">@Resource.AddressTitle</h3>
<div class="form-group-compound @Html.Gds().FormGroupClass(m => m.AddressLine1)">
    @Html.Gds().LabelFor(m => m.AddressLine1, false)
    @Html.Gds().ValidationMessageFor(m => m.AddressLine1)
    @Html.Gds().TextBoxFor(m => m.AddressLine1, new { @class = "form-control form-control-full" })
</div>
<div class="form-group-compound @Html.Gds().FormGroupClass(m => m.AddressLine2)">
    @Html.Gds().LabelFor(m => m.AddressLine2)
    @Html.Gds().ValidationMessageFor(m => m.AddressLine2)
    @Html.Gds().TextBoxFor(m => m.AddressLine2, new { @class = "form-control form-control-full" })
</div>
<div class="form-group-compound @Html.Gds().FormGroupClass(m => m.TownOrCity)">
    @Html.Gds().LabelFor(m => m.TownOrCity, false)
    @Html.Gds().ValidationMessageFor(m => m.TownOrCity)
    @Html.Gds().TextBoxFor(m => m.TownOrCity, new { @class = "form-control form-control-full" })
</div>
<div class="form-group-compound @Html.Gds().FormGroupClass(m => m.CountryId)">
    @Html.Gds().LabelFor(m => m.CountryId, false)
    @Html.Gds().ValidationMessageFor(m => m.CountryId)
    @Html.Gds().DropDownListFor(m => m.CountryId, Model.CountrySelectList, string.Empty, new { @class = "form-control form-control-full", data_select_box = "true" })
</div>
<div class="form-group-compound @Html.Gds().FormGroupClass(m => m.PostalCode)">
    @Html.Gds().LabelFor(m => m.PostalCode, false)
    @Html.Gds().ValidationMessageFor(m => m.PostalCode)
    @Html.Gds().TextBoxFor(m => m.PostalCode, new { @class = "form-control form-control-full" })
</div>
