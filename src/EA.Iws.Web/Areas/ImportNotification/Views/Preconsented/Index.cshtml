@using EA.Iws.Web.Areas.ImportNotification.Views.Preconsented;
@model EA.Iws.Web.Areas.ImportNotification.ViewModels.Preconsented.PreconsentedViewModel
@{
    ViewBag.Title = IndexResources.PageTitle;
}

<header>
    <h1 class="heading-large">@IndexResources.MainHeading</h1>
</header>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group @Html.Gds().FormGroupClass(m => m.PreconsentedFacilityExists.SelectedValue)">
        @Html.EditorFor(m => m.PreconsentedFacilityExists)
    </div>

    <div class="form-group">
        <button class="button" type="submit">@Constants.ContinueButtonText</button>
    </div>
}