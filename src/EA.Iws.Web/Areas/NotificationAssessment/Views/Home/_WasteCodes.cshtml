    <details>
        <summary>
            Y codes
        </summary>
        <div class="expanded-details">
            <div class="panel-indent">
                @Html.Partial(viewLocation + "_YCodes.cshtml")
            </div>
        </div>
    </details>

    <details>
        <summary>
            H or HP codes
        </summary>
        <div class="expanded-details">
            <div class="panel-indent">
                @Html.Partial(viewLocation + "_HCodes.cshtml")
            </div>
        </div>
