    <details>
        <summary>
            UN number
        </summary>
        <div class="expanded-details">
            <div class="panel-indent">
                @Html.Partial(viewLocation + "_UnNumbers.cshtml")
            </div>
        </div>
    </details>

    <details>
        <summary>
            Other codes
        </summary>
        <div class="expanded-details">
            <div class="panel-indent">
                @Html.Partial(viewLocation + "_OtherCodes.cshtml")
            </div>
        </div>
