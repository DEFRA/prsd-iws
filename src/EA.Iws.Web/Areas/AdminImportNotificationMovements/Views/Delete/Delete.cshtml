@using Resource = EA.Iws.Web.Areas.AdminImportNotificationMovements.Views.Delete.DeleteResources
@model EA.Iws.Web.Areas.AdminImportNotificationMovements.ViewModels.Delete.DeleteViewModel

@{
    ViewBag.Title = Resource.Title;
}

<div class="grid-row">
    <div class="column-two-thirds">
        <h1 class="govuk-heading-l">@String.Format(Resource.MainHeading, Model.Number)</h1>

        <div class="govuk-form-group">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.NotificationId)
                @Html.HiddenFor(m => m.Number)

                <button type="submit" class="govuk-button">@Resource.ConfirmButtonText</button>
            }
        </div>

        @Html.ActionLink(Resource.CancelButtonText, "Index", "Home", new { area = "AdminImportNotificationMovements", Model.NotificationId }, null)
    </div>
</div>
