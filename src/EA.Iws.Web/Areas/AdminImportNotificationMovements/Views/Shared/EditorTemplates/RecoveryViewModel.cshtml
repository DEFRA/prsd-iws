@model EA.Iws.Web.Areas.AdminImportNotificationMovements.ViewModels.Capture.RecoveryViewModel
@using EA.Iws.Core.Shared
@using Resource = EA.Iws.Web.Areas.AdminImportNotificationMovements.Views.Shared.EditorTemplates.RecoveryResources

@{
    var operationLabelVerb = Model.NotificationType == NotificationType.Recovery ? "recovered" : "disposed of";
    var operationTitleVerb = Model.NotificationType == NotificationType.Recovery ? "Recovered" : "Disposed";
}


    <div>
        <div class="form-group @Html.Gds().FormGroupClass(m => m.RecoveryDate.Day) @Html.Gds().FormGroupClass(m => m.RecoveryDate.Month) @Html.Gds().FormGroupClass(m => m.RecoveryDate.Year)">
            @Html.LabelFor(m => m.RecoveryDate, string.Format(Resource.RecoveryDate, operationLabelVerb), new { @class = "heading-small" })
            @Html.Gds().ValidationMessageFor(m => m.RecoveryDate)
            @Html.EditorFor(m => m.RecoveryDate)
        </div>
    </div>



@Html.HiddenFor(m => m.NotificationType)

