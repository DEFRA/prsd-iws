@model EA.Iws.Web.Areas.AdminImportNotificationMovements.ViewModels.Home.MovementSummaryViewModel

@{
    ViewBag.Title = "Shipment summary";
}

@helper DisplayDate(DateTime? date)
{
    if (date.HasValue)
    {
        @date.Value.ToString("d MMM yyyy")
    }
    else
    {
        @:- -
    }
}

<div class="shipping-home">

    <h1 class="heading-large">
        Shipment summary
    </h1>

    <div class="nav-bloc">
        <h2 class="heading-small">Shipping options</h2>
        <nav>
            @Html.ActionLink("Record shipment data", "Index", "Capture", new { area = "AdminImportNotificationMovements" }, null)
        </nav>
    </div>

    <section class="ship-data">
        <h3 class="heading-small">
            Shipment details
        </h3>

        <div class="form-group">
            <table class="odd-table">
                <caption class="visuallyhidden">Shipment summary</caption>
                <thead>
                    <tr>
                        <th>No.</th>
                        <th>Prenotified</th>
                        <th>Shipment due</th>
                    </tr>
                </thead>

                <tbody>
                    @{
                        for (int i = 0; i < Model.Movements.Count; i++)
                        {
                            <tr>
                                <td>@Model.Movements[i].Number</td>
                                <td>
                                    @DisplayDate(Model.Movements[i].PrenotificationDate)
                                </td>
                                <td>
                                    @DisplayDate(Model.Movements[i].ShipmentDate)
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </section>
    <div class="form-group">
        @Html.ActionLink("Go to notification overview",
            "Index",
            "Home",
            new { area = "ImportNotification", id = Model.NotificationId },
            new { @class = "button" })
    </div>
</div>