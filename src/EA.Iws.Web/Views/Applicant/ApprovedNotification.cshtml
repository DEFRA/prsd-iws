@using EA.Iws.Web.Views.Applicant
@model EA.Iws.Web.ViewModels.Applicant.ApprovedNotificationViewModel
@{
    ViewBag.Title = ApprovedNotificationResources.Title;
}

<header class="hgroup text">
    <h2 class="heading-large">@ApprovedNotificationResources.Header</h2>
</header>

@using (Html.BeginForm("ApprovedNotification", "Applicant"))
{
    @Html.AntiForgeryToken()
    @Html.Gds().ValidationSummary()
    @Html.HiddenFor(m => m.NotificationId)

    <div class="form-group @Html.Gds().FormGroupClass(m => m.UserChoices.SelectedValue)">
        @Html.Gds().ValidationMessageFor(model => model.UserChoices.SelectedValue)
        @Html.EditorFor(m => m.UserChoices)
    </div>

    <div class="form-group">
        <input type="submit" class="button" value=@ApprovedNotificationResources.Continue />
    </div>
    <p>@Html.ActionLink(ApprovedNotificationResources.ReturnToMyAccount, "Home", "Applicant", new { id = User.GetUserId(), area = string.Empty }, null)</p>
}