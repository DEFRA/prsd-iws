@using EA.Iws.Web.Views.Applicant

@model IList<EA.Iws.Requests.Notification.NotificationApplicationSummaryData>

@if (ViewBag.Errors != null && ((IEnumerable<string>)ViewBag.Errors).Any())
{
    <p>@GetUserNotificationsResources.ErrorMessage</p>
}
else if (Model.Count == 0)
{
    <p>@GetUserNotificationsResources.MessageNoNotification</p>
}
else
{
    <table class="odd-table" title=@GetUserNotificationsResources.TitleManageNotifications>
        <caption class="visuallyhidden">@GetUserNotificationsResources.TableCaption</caption>
        <thead>
            <tr>
                <th>
                    @GetUserNotificationsResources.ThNotificationNumber
                </th>
                <th>
                    @GetUserNotificationsResources.ThStatus
                </th>
                <th>
                    @GetUserNotificationsResources.ThExporter
                </th>
                <th>
                    @Html.Raw(GetUserNotificationsResources.ProducerTableHeader)
                </th>
                <th>
                    @GetUserNotificationsResources.ThImporter
                </th>
                <th>
                    @GetUserNotificationsResources.ThAction
                </th>
            </tr>
        </thead>
       
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>
                        @Html.Raw(Model[i].NotificationNumber.Replace(" ", "&nbsp;"))
                    </td>
                    <td>
                        <span class="statusbox @Html.ExportStatus().DisplayColorClass(Model[i].Status) table">@Html.Raw(EA.Prsd.Core.Helpers.EnumHelper.GetDisplayName(Model[i].Status).ToUpperInvariant().Replace(" ", "&nbsp;")) </span>
                    </td>
                    <td>
                        @Model[i].Exporter
                    </td>
                    <td>
                        @Model[i].Producer
                    </td>
                    <td>
                        @Model[i].Importer
                    </td>
                    <td>
                        @Html.ActionLink(linkText: GetUserNotificationsResources.LinkChoose, actionName: "Index", controllerName: "Options",
                        routeValues: new { id = Model[i].Id, area = "NotificationApplication" }, htmlAttributes: new { @title = Model[i].NotificationNumber })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}