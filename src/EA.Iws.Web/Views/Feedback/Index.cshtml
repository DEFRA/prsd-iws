@model EA.Iws.Web.ViewModels.NewUser.FeedbackViewModel
@{
    Layout = "~/Views/Shared/_Layout.GovUK.Sections.cshtml";
    ViewBag.Title = "Feedback";
}

<header class="hgroup">
    <h1 class="heading-large">What did you think of this service?</h1>
</header>

@using (Html.BeginForm(actionName: "Index", controllerName: "Feedback", method: FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.Gds().ValidationSummary()

    <h2 class="heading-small">Overall, how did you feel about the service you received today?</h2>
    <div class="form-group @Html.Gds().FormGroupClass(m => m.FeedbackOptions.SelectedValue)">
        @Html.Gds().ValidationMessageFor(model => model.FeedbackOptions.SelectedValue)
        @Html.EditorFor(m => m.FeedbackOptions)
    </div>

    <div class="form-group">
        <h2 class="heading-small">How could we improve this service?</h2>
        <div class="form-group @Html.Gds().FormGroupClass(m => m.FeedbackDescription)">
            @Html.Gds().ValidationMessageFor(m => m.FeedbackDescription)
            @Html.TextAreaFor(m => m.FeedbackDescription, new { @maxlength = "1200", @class = "text-area full-width" })
        </div>
        <p>(Limit is 1200 characters)</p>
        <p>Please don't include any personal or financial information, for example your National Insurance or credit card numbers.</p>
    </div>

    <div class="form-group">
        <input type="submit" class="button" value="Send feedback" />
    </div>
}