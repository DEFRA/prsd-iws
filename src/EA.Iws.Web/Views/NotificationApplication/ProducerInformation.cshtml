@model EA.Iws.Web.ViewModels.NotificationApplication.ProducerInformationViewModel

@{
    ViewBag.Title = "Waste Generator(s) - Producer(s)";
}

@using (Html.BeginForm("ProducerInformation", "NotificationApplication", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.Gds().ValidationSummary()

    <header class="hgroup">
        <h1 class="heading-medium">Waste Generator(s) - Producer(s)</h1>
        <div class="colored-header-bar"></div>
    </header>

    <div class="form-group">
        @Html.HiddenFor(m => m.NotificationId)
    </div>

    <div class="form-group">
        <label class="block-label">
            @Html.CheckBoxFor(m => m.IsSiteOfExport)
            This producer is the Site of Export
        </label>
    </div>

    @Html.EditorFor(m => m.BusinessNameAndTypeViewModel)

    <h1 class="heading-medium">Address</h1>

    @Html.EditorFor(m => m.AddressDetails)

    <h1 class="heading-medium">Contact Person</h1>

    @Html.EditorFor(m => m.ContactDetails)

    <button class="button" type="submit">Continue</button>
}