@{
    ViewBag.Title = "Email sent";
}

<div class="grid-row">
    <section class="column-two-thirds">
        <h1 class="heading-large">We have emailed you password reset instructions</h1>
        <p>We have sent your password reset instructions to @ViewBag.Email. You need to use the link in the email to reset your password.</p>
        <p>Please check your email inbox or junk folder.</p>
        <p>If you have not received the email, you can @Html.ActionLink("request to reset your password", "ForgotPassword", "Account") again.</p>
        <p>@Html.ActionLink("Continue", "Login", "Account", new { @class = "button" })</p>
    </section>
</div>