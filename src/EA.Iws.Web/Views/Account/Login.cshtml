@model EA.Iws.Web.ViewModels.Account.LoginViewModel

<h1 class="heading-large">
    Log in
</h1>
<p class="heading-large"></p>

@using (Html.BeginForm("Login", "Account"))
{
    @Html.AntiForgeryToken()
    @Html.Gds().ValidationSummary()

    <div class="form-group @Html.Gds().FormGroupClass(m => m.Email)">
        @Html.ValidationMessageFor(m => m.Email)
        @Html.LabelFor(m => m.Email, new { @class = "form-label" })
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
    </div>
    <div class="form-group @Html.Gds().FormGroupClass(m => m.Password)">
        @Html.ValidationMessageFor(m => m.Password)
        @Html.LabelFor(m => m.Password, new { @class = "form-label" })
        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.CheckBoxFor(m => m.RememberMe)
        @Html.LabelFor(m => m.RememberMe)
    </div>
    <div class="form-group">
            <input type="submit" value="Log in" class="button" />
    </div>
    <p>
        @Html.ActionLink("Register as a new user", "ApplicantRegistration", "Registration")
    </p>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}