@model EA.Iws.Web.ViewModels.Account.LoginViewModel

<h1 class="heading-large">
    Log in to access your shipments
</h1>
<p>Enter your email address and password and click continue</p>
<p class="heading-large"></p>

@using (Html.BeginForm("Login", "Account"))
{
    @Html.AntiForgeryToken()
    @Html.Gds().ValidationSummary()

    <div class="form-group @Html.Gds().FormGroupClass(m => m.Email)">
        @Html.ValidationMessageFor(m => m.Email)
        @Html.Gds().LabelFor(m => m.Email, new { @class = "form-label" })
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
    </div>
    <div class="form-group @Html.Gds().FormGroupClass(m => m.Password)">
        @Html.ValidationMessageFor(m => m.Password)
        @Html.Gds().LabelFor(m => m.Password, new { @class = "form-label" })
        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.CheckBoxFor(m => m.RememberMe)
        @Html.Gds().LabelFor(m => m.RememberMe)
    </div>
    <div class="form-group">
            <input type="submit" value="Continue" class="button" />
    </div>
    <p>@Html.ActionLink("Forgot your username", "Login", "Account")</p>
    <p>@Html.ActionLink("Reset your password", "Login", "Account")</p>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}