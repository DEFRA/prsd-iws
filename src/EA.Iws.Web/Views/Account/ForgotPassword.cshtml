@using EA.Iws.Web.Views.Account
@model EA.Iws.Web.ViewModels.Account.ForgotPasswordViewModel

@{
    ViewBag.Title = ForgotPasswordResources.Title;
}

<div class="grid-row">
    <section class="column-two-thirds">
        <h1 class="heading-large">@ForgotPasswordResources.Header</h1>
        <p>@ForgotPasswordResources.H1Description</p>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.Gds().ValidationSummary()

            <div class="form-group @Html.Gds().FormGroupClass(m => m.Email)">
                @Html.Gds().LabelFor(m => m.Email)
                @Html.Gds().ValidationMessageFor(m => m.Email)
                @Html.Gds().TextBoxFor(m => m.Email, new { autocomplete = "off" })
            </div>
            <div class="form-group">
                <details class="margin-top-15">
                    <summary>
                        <h2 class="summary heading-xsmall">@ForgotPasswordResources.Header2</h2>
                    </summary>
                    <div class="panel-indent">
                        <p>@ForgotPasswordResources.H2Description</p>
                    </div>
                </details>
            </div>
            <div class="form-group">
                <button class="button">@ForgotPasswordResources.Continue</button>
            </div>
        }
    </section>
</div>