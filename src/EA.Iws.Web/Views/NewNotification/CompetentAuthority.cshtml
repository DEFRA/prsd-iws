@model EA.Iws.Web.ViewModels.NewNotification.CompetentAuthorityChoiceViewModel
@{
    ViewBag.Title = "Which Competent Authority";
}

<header class="hgroup">
    <h2 class="heading-large">Which competent authority are you applying to?</h2>
    <p>Select the competent authority for the country you are exporting waste from:</p>
</header>

@using (Html.BeginForm(actionName: "CompetentAuthority", controllerName: "NewNotification", method: FormMethod.Post))
{
    @Html.Gds().ValidationSummary()
    @Html.AntiForgeryToken()

    <div class="form-group @Html.Gds().FormGroupClass(m => m.CompetentAuthorities.SelectedValue)">
        @Html.Gds().ValidationMessageFor(model => model.CompetentAuthorities.SelectedValue)
        @Html.EditorFor(m => m.CompetentAuthorities)
    </div>

    <div class="form-group">
        <button class="button" type="submit">Continue</button>
    </div>
}