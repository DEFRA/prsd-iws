@model EA.Iws.Web.ViewModels.Shipment.SpecialHandlingViewModel

@{
    ViewBag.Title = "Special Handling";
}


<header class="hgroup">
    <h2 class="heading-large">Are there any special handling requirements?</h2>
</header>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.Gds().ValidationSummary()
    <div class="form-group">
        <fieldset>
            <label class="block-label">
                @Html.RadioButtonFor(m => m.IsSpecialHandling, false, new { @id = "rdoNotSpecialHandling", Checked = "checked" })No

            </label>
            <label class="block-label" for="rdoSpecialHandling">
                @Html.RadioButtonFor(m => m.IsSpecialHandling, true, new { @id = "rdoSpecialHandling" })Yes
            </label>
        </fieldset>

        <div class="panel-indent @(Model.IsSpecialHandling ? "" : "js-hidden")" id="information-message">
            <h2 class="heading-small">Provide details of the special handling requirements</h2>
            <div class="form-group grid-row">
                <div class="column-two-thirds">
                    @Html.Gds().ValidationMessageFor(m => m.SpecialHandlingDetails)
                    @Html.TextAreaFor(m => m.SpecialHandlingDetails, new { @style = "width: 100%" })
                </div>
            </div>
        </div>
    </div>

    @Html.HiddenFor(m => m.NotificationId)
    <div class="form-group">
        <button class="button" type="submit">Continue</button>
    </div>
}


@section scripts
{
    <script>
        $(function () {

            $("#rdoSpecialHandling").click(function () {
                $("#information-message").show("fast");
            });

            $("#rdoNotSpecialHandling").click(function () {
                $("#information-message").hide("fast");
            });
        });
    </script>
}

