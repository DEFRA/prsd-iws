@model EA.Iws.Web.ViewModels.Shipment.ShipmentInfoViewModel
@{
    ViewBag.Title = "Shipment Information";
}

@using (Html.BeginForm("Info", "Shipment", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.Gds().ValidationSummary()

    <header class="hgroup">
        <h2 class="heading-large">What is the total intended number of shipments?</h2>
    </header>
    <div class="form-group @Html.Gds().FormGroupClass(m => m.NumberOfShipments)">
        @Html.Gds().LabelFor(m => m.NumberOfShipments)
        @Html.Gds().ValidationMessageFor(m => m.NumberOfShipments)
        @Html.Gds().TextBoxFor(m => m.NumberOfShipments, new { @class = "numberInput", width = "50px" })
    </div>

    <hr>
    <header class="hgroup">
        <h2 class="heading-large">What is the total intended quantity?</h2>
    </header>

    <div class="grid-row">
        <div class="column-half">
            <div class="form-group @Html.Gds().FormGroupClass(m => m.Quantity)">
                @Html.Gds().LabelFor(m => m.Quantity)
                @Html.Gds().ValidationMessageFor(m => m.Quantity)
                @Html.Gds().TextBoxFor(m => m.Quantity)
            </div>
        </div>
        <div class="column-half">
            <div class="form-group @Html.Gds().FormGroupClass(m => m.Units)">
                @Html.Gds().LabelFor(m => m.Units)
                @Html.Gds().ValidationMessageFor(m => m.Units)
                @Html.Gds().DropDownListFor(m => m.Units, Model.UnitsSelectList, new { @class = "unitsInput" })
            </div>
        </div>
    </div>

    <hr>
    <header class="hgroup">
        <h2 class="heading-large">What are the intended dates of the first and last departure?</h2>
    </header>

    <div class="grid-row">

        <div class="column-half">
            <div class="form-group @Html.Gds().FormGroupClass(m => m.StartDay) @Html.Gds().FormGroupClass(m => m.StartMonth) @Html.Gds().FormGroupClass(m => m.StartYear)">
                <fieldset>
                    <legend>
                        <span class="form-label">First departure</span>
                    </legend>

                    <div class="form-date">
                        <p class="form-hint">For example, 31 3 2015</p>
                        @Html.Gds().ValidationMessageFor(m => m.StartDay)
                        @Html.Gds().ValidationMessageFor(m => m.StartMonth)
                        @Html.Gds().ValidationMessageFor(m => m.StartYear)
                        <div class="form-group form-group-day">
                            @Html.Gds().LabelFor(m => m.StartDay)
                            @Html.Gds().TextBoxFor(m => m.StartDay, new { type = "number", min = "1", max = "31", pattern = "[0-9]*" })
                        </div>
                        <div class="form-group form-group-month">
                            @Html.Gds().LabelFor(m => m.StartMonth)
                            @Html.Gds().TextBoxFor(m => m.StartMonth, new { type = "number", min = "1", max = "12", pattern = "[0-9]*" })
                        </div>
                        <div class="form-group form-group-year">
                            @Html.Gds().LabelFor(m => m.StartYear)
                            @Html.Gds().TextBoxFor(m => m.StartYear, new { type = "number", min = "2015", pattern = "[0-9]*" })
                        </div>
                    </div>
                </fieldset>
            </div>
        </div>

        <div class="column-half">
            <div class="form-group @Html.Gds().FormGroupClass(m => m.EndDay) @Html.Gds().FormGroupClass(m => m.EndMonth) @Html.Gds().FormGroupClass(m => m.EndYear)">
                <fieldset>
                    <legend>
                        <span class="form-label">Last departure</span>
                    </legend>

                    <div class="form-date">
                        <p class="form-hint">For example, 27 11 2015</p>
                        @Html.Gds().ValidationMessageFor(m => m.EndDay)
                        @Html.Gds().ValidationMessageFor(m => m.EndMonth)
                        @Html.Gds().ValidationMessageFor(m => m.EndYear)
                        <div class="form-group form-group-day">
                            @Html.Gds().LabelFor(m => m.EndDay)
                            @Html.Gds().TextBoxFor(m => m.EndDay, new { type = "number", min = "1", max = "31", pattern = "[0-9]*" })
                        </div>
                        <div class="form-group form-group-month">
                            @Html.Gds().LabelFor(m => m.EndMonth)
                            @Html.Gds().TextBoxFor(m => m.EndMonth, new { type = "number", min = "1", max = "12", pattern = "[0-9]*" })
                        </div>
                        <div class="form-group form-group-year">
                            @Html.Gds().LabelFor(m => m.EndYear)
                            @Html.Gds().TextBoxFor(m => m.EndYear, new { type = "number", min = "2015", pattern = "[0-9]*" })
                        </div>
                    </div>
                </fieldset>
            </div>
        </div>
    </div>

    @Html.HiddenFor(m => m.NotificationId)
    <div class="form-group">
        <p> <button class="button" type="submit">Continue</button></p>
    </div>
}

