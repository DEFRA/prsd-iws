@using EA.Iws.Web.Views.Home
@model EA.Iws.Web.ViewModels.Shared.YesNoChoiceViewModel
@{
    ViewBag.Title = LandingPageResources.Title;
}
<header class="hgroup text">
    <h1 class="heading-large">@LandingPageResources.Header</h1>
</header>

@using (Html.BeginForm())
{
    <div class="text">
        @Html.AntiForgeryToken()
        @Html.Gds().ValidationSummary()

        <div class="form-group @Html.Gds().FormGroupClass(m => m.Choices.SelectedValue)">
            @Html.Gds().ValidationMessageFor(model => model.Choices.SelectedValue)
            @Html.EditorFor(m => m.Choices)
        </div>

        <div class="form-group">
            <button class="button" type="submit">@LandingPageResources.Continue</button>
        </div>
    </div>
}