@model EA.Iws.Web.ViewModels.Home.YesNoChoice

@{
    ViewBag.Title = "Landing Page";
}

@using (Html.BeginForm(actionName: "LandingPage", controllerName: "Home", method: FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
    <div class="grid-row">
        
            <header class="hgroup">
                <h1 class="heading-large">Have you already registered for international waste shipments?</h1>
            </header>

            <div class="form-group @Html.Gds().FormGroupClass(m => m.Choices.SelectedValue)">
                @Html.EditorFor(m => m.Choices)
            </div>

            <div class="form-group">
                <button class="button" type="submit">Continue</button>
            </div>

        
    </div>
}
