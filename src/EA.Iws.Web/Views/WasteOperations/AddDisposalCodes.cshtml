@model EA.Iws.Web.ViewModels.WasteOperations.OperationCodesViewModel

@using (Html.BeginForm("AddDisposalCodes", "WasteOperations", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.Gds().ValidationSummary()

    <header class="hgroup">
        <h2 class="heading-large">Which disposal operation codes apply to this notification?</h2>
        
    </header>

    <div class="form-group">
        @Html.HiddenFor(m => m.NotificationId)
    </div>

    @Html.Partial("_OperationCodes", Model)

    <div class="form-group">
        <input type="submit" class="button" value="Continue">
    </div>

}
@section scripts
{
    @Html.Partial("_SelectAllCheckBoxScript")
}
