@using EA.Iws.Web.Infrastructure
@using EA.Iws.Web.Views.Registration
@model EA.Iws.Web.ViewModels.Registration.EditOrganisationViewModel

@{
    ViewBag.Title = EditOrganisationDetailsResources.Title;
}

<h1 class="govuk-heading-l">@EditOrganisationDetailsResources.Header</h1>

@using (Html.BeginForm("EditOrganisationDetails", "Registration"))
{
    <div class="text">
        @Html.AntiForgeryToken()
        @Html.Gds().ValidationSummary()
        @Html.HiddenFor(m => m.OrganisationId)
        @Html.HiddenFor(m => m.Name)

        <div class="govuk-form-group @Html.Gds().FormGroupClass(m => m.Address1)">
            @Html.Gds().LabelFor(m => m.Address1)
            @Html.Gds().ValidationMessageFor(m => m.Address1)
            @Html.Gds().TextBoxFor(m => m.Address1)
        </div>
        <div class="govuk-form-group @Html.Gds().FormGroupClass(m => m.Address2)">
            @Html.Gds().LabelFor(m => m.Address2)
            @Html.Gds().ValidationMessageFor(m => m.Address2)
            @Html.Gds().TextBoxFor(m => m.Address2)
        </div>
        <div class="govuk-form-group @Html.Gds().FormGroupClass(m => m.TownOrCity)">
            @Html.Gds().LabelFor(m => m.TownOrCity)
            @Html.Gds().ValidationMessageFor(m => m.TownOrCity)
            @Html.Gds().TextBoxFor(m => m.TownOrCity)
        </div>
        <div class="govuk-form-group @Html.Gds().FormGroupClass(m => m.Region)">
            @Html.Gds().LabelFor(m => m.Region)
            @Html.Gds().ValidationMessageFor(m => m.Region)
            @Html.Gds().TextBoxFor(m => m.Region)
        </div>
        <div class="govuk-form-group @Html.Gds().FormGroupClass(m => m.Postcode)">
            @Html.Gds().LabelFor(m => m.Postcode, EditOrganisationDetailsResources.PostcodeOptional)
            @Html.Gds().ValidationMessageFor(m => m.Postcode)
            @Html.Gds().TextBoxFor(m => m.Postcode)
        </div>
        <div class="govuk-form-group @Html.Gds().FormGroupClass(m => m.CountryId)">
            @Html.Gds().LabelFor(m => m.CountryId)
            @Html.Gds().ValidationMessageFor(m => m.CountryId)
            @Html.Gds().DropDownListFor(m => m.CountryId, (SelectList)ViewBag.Countriesstring.Empty, new { @class = "govuk-!-width-one-half govuk-select", autocomplete = "false", aria_labelledby = "country-dropdown-list" })
            @Html.HiddenFor(m => m.DefaultCountryId)
        </div>

        <div class="govuk-form-group">
            <input type="submit" class="govuk-button" value="@EditOrganisationDetailsResources.Update" />
        </div>
        <p>@Html.ActionLink(EditOrganisationDetailsResources.GoBackToMyAccount, "Home", "Applicant", new { id = User.GetUserId(), area = string.Empty }, null)</p>
    </div>
}