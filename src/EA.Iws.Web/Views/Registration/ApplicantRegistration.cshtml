@using EA.Iws.Web.Views.Registration

@model EA.Iws.Web.ViewModels.Registration.ApplicantRegistrationViewModel
@{
    ViewBag.Title = ApplicantRegistrationResources.Title;
    var signin = Request.QueryString["signin"];
}

<h1 class="govuk-heading-l">@ApplicantRegistrationResources.Header</h1>
<p>@ApplicantRegistrationResources.HeaderDescription</p>

@using (Html.BeginForm("ApplicantRegistration", "Registration"))
{
    @Html.AntiForgeryToken()
    @Html.Gds().ValidationSummary()

    <div class="text">
        <div class="govuk-form-group @Html.Gds().FormGroupClass(m => m.Name)">
            @Html.Gds().LabelFor(m => m.Name)
            @Html.Gds().ValidationMessageFor(m => m.Name)
            @Html.Gds().TextBoxFor(m => m.Name)
        </div>
        <div class="govuk-form-group @Html.Gds().FormGroupClass(m => m.Surname)">
            @Html.Gds().LabelFor(m => m.Surname)
            @Html.Gds().ValidationMessageFor(m => m.Surname)
            @Html.Gds().TextBoxFor(m => m.Surname)
        </div>
        <div class="govuk-form-group @Html.Gds().FormGroupClass(m => m.OrganisationName)">
            @Html.Gds().LabelFor(m => m.OrganisationName)
            @Html.Gds().ValidationMessageFor(m => m.OrganisationName)
            @Html.Gds().TextBoxFor(m => m.OrganisationName)
        </div>
        <div class="govuk-form-group @Html.Gds().FormGroupClass(m => m.PhoneNumber)">
            @Html.Gds().LabelFor(m => m.PhoneNumber)
            @Html.Gds().ValidationMessageFor(m => m.PhoneNumber)
            @Html.Gds().TextBoxFor(m => m.PhoneNumber)
        </div>
        <div class="govuk-form-group @Html.Gds().FormGroupClass(m => m.Email)">
            @Html.Gds().LabelFor(m => m.Email)
            @Html.Gds().ValidationMessageFor(m => m.Email)
            @Html.Gds().TextBoxFor(m => m.Email)
        </div>

        @Html.EditorFor(m => m.Address)

        <div class="govuk-form-group @Html.Gds().FormGroupClass(m => m.Password)">
            @Html.Gds().LabelFor(m => m.Password)
            @Html.Gds().ValidationMessageFor(m => m.Password)
            @Html.Gds().HintParagraph(ApplicantRegistrationResources.PasswordHint)
            @Html.Gds().PasswordFor(m => m.Password)
        </div>
        <div class="govuk-form-group @Html.Gds().FormGroupClass(m => m.ConfirmPassword)">
            @Html.Gds().LabelFor(m => m.ConfirmPassword)
            @Html.Gds().ValidationMessageFor(m => m.ConfirmPassword)
            @Html.Gds().PasswordFor(m => m.ConfirmPassword)
        </div>

        <div class="govuk-form-group">
            <details class="govuk-details" data-module="govuk-details">
                <summary class="govuk-details__summary">
                    <span class="govuk-details__summary-text">
                        @ApplicantRegistrationResources.TermsAndConditionsHeader
                    </span>
                </summary>
                <div class="panel govuk-details__text">
                    @Html.Partial("_IwsTermsAndConditions")
                </div>
            </details>
            <details class="govuk-details" data-module="govuk-details">
                <summary class="govuk-details__summary">
                    <span class="govuk-details__summary-text">
                        Read our privacy notice
                    </span>
                </summary>
                <div class="panel govuk-details__text">
                    @Html.Partial("_IwsStandardDataNotice")
                </div>
            </details>
        </div>

        <div class="govuk-form-group @Html.Gds().FormGroupClass(m => m.TermsAndConditions)">
            <fieldset class="govuk-fieldset">
                <div class="govuk-checkboxes" data-module="govuk-checkboxes">
                    <div>@Html.Gds().ValidationMessageFor(m => m.TermsAndConditions)</div>
                    <div class="multiple-choice govuk-checkboxes__item">
                        @Html.CheckBoxFor(m => m.TermsAndConditions, new { data_track = "element", data_category = "Terms and conditions", data_action = "Accept", @class = "govuk-checkboxes__input" })
                        <label class="govuk-label govuk-checkboxes__label" for="@Html.NameFor(m => m.TermsAndConditions)">
                            @ApplicantRegistrationResources.AcceptTnCs
                        </label>
                    </div>
                </div>
            </fieldset>
        </div>

        <div class="govuk-form-group">
            <input type="submit" class="govuk-button" value="@ApplicantRegistrationResources.Continue" id="btnSave" />
        </div>
    </div>
}
