@model EA.Iws.Web.ViewModels.Registration.CreateNewOrganisationViewModel

@{
    ViewBag.Title = "Organisation Details";
}
<h1 class="heading-large">
    Add a new organisation
</h1>
<p>Use this service to enter the details of your principal place of business</p>

@using (Html.BeginForm("CreateNewOrganisation", "Registration"))
{
    @Html.AntiForgeryToken()
    @Html.Gds().ValidationSummary()

    <div class="form-group @Html.Gds().FormGroupClass(m => m.Name)">
        @Html.ValidationMessageFor(m => m.Name)
        @Html.Gds().LabelFor(m => m.Name, new { @class = "form-label" })
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
    </div>
    <div class="form-group @Html.Gds().FormGroupClass(m => m.Building)">
        @Html.ValidationMessageFor(m => m.Building)
        @Html.Gds().LabelFor(m => m.Building, new { @class = "form-label" })
        @Html.TextBoxFor(m => m.Building, new { @class = "form-control" })
    </div>
    <div class="form-group @Html.Gds().FormGroupClass(m => m.Address1)">
        @Html.ValidationMessageFor(m => m.Address1)
        @Html.Gds().LabelFor(m => m.Address1, new { @class = "form-label" })
        @Html.TextBoxFor(m => m.Address1, new { @class = "form-control" })
    </div>
    <div class="form-group @Html.Gds().FormGroupClass(m => m.Address2)">
        @Html.ValidationMessageFor(m => m.Address2)
        @Html.Gds().LabelFor(m => m.Address2, new { @class = "form-label" })
        @Html.TextBoxFor(m => m.Address2, new { @class = "form-control" })
    </div>
    <div class="form-group @Html.Gds().FormGroupClass(m => m.TownOrCity)">
        @Html.ValidationMessageFor(m => m.TownOrCity)
        @Html.Gds().LabelFor(m => m.TownOrCity, new { @class = "form-label" })
        @Html.TextBoxFor(m => m.TownOrCity, new { @class = "form-control" })
    </div>
    <div class="form-group @Html.Gds().FormGroupClass(m => m.Postcode)">
        @Html.ValidationMessageFor(m => m.Postcode)
        @Html.Gds().LabelFor(m => m.Postcode, new { @class = "form-label" })
        @Html.TextBoxFor(m => m.Postcode, new { @class = "form-control" })
    </div>
    <div class="form-group @Html.Gds().FormGroupClass(m => m.Country)">
        @Html.ValidationMessageFor(m => m.Country)
        @Html.Gds().LabelFor(m => m.Country, new { @class = "form-label" })
        @Html.DropDownListFor(m => m.Country, new SelectList(Model.Countries, "Id", "Name", Model.DefaultCountry.Id), new { @class = "form-control" })
    </div>
    <div class="form-group" @Html.Gds().FormGroupClass(m => m.EntityType)>
        @Html.ValidationMessageFor(m => m.EntityType)
        <label class="form-label">Organisation type</label>
        <label class="block-label">
            @Html.RadioButtonFor(m => m.EntityType, "Sole Trader") Sole Trader
        </label>
        <label class="block-label">
            @Html.RadioButtonFor(m => m.EntityType, "Partnership") Partnership
        </label>
        <label class="block-label" data-target="companies-house-number">
            @Html.RadioButtonFor(m => m.EntityType, "Limited Company") Limited Company
        </label>
        <div class="panel-indent @(Model.EntityType != null && Model.EntityType.Equals("Limited Company") ? "" : "js-hidden")" id="companies-house-number">
            <div class="form-group" @Html.Gds().FormGroupClass(m => m.CompaniesHouseReference)>
                @Html.ValidationMessageFor(m => m.CompaniesHouseReference)
                @Html.LabelFor(m => m.CompaniesHouseReference, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.CompaniesHouseReference, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <details>
                    <summary><span class="summary">Where can I find my company number</span></summary>
                    <div class="panel-indent">
                        <p>
                            You will find your company number on your Certificate of Incorporation.
                        </p>
                    </div>
                </details>
            </div>
        </div>
    </div>
    <div class="form-group">
        <input type="submit" class="button" value="Continue" />
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}