@using EA.Iws.Core.Shared
@model EA.Iws.Web.ViewModels.Registration.CreateNewOrganisationViewModel

@{
    ViewBag.Title = "Organisation Details";
}
<h1 class="heading-large">
    Add a new organisation
</h1>
<p>Enter your correspondence address</p>

@using (Html.BeginForm("CreateNewOrganisation", "Registration"))
{
    @Html.AntiForgeryToken()
    @Html.Gds().ValidationSummary()

    <div class="form-group @Html.Gds().FormGroupClass(m => m.Name)">
        @Html.Gds().LabelFor(m => m.Name)
        @Html.Gds().ValidationMessageFor(m => m.Name)
        @Html.Gds().TextBoxFor(m => m.Name)
    </div>
    <div class="form-group @Html.Gds().FormGroupClass(m => m.Building)">
        @Html.Gds().LabelFor(m => m.Building)
        @Html.Gds().ValidationMessageFor(m => m.Building)
        @Html.Gds().TextBoxFor(m => m.Building)
    </div>
    <div class="form-group @Html.Gds().FormGroupClass(m => m.Address1)">
        @Html.Gds().LabelFor(m => m.Address1)
        @Html.Gds().ValidationMessageFor(m => m.Address1)
        @Html.Gds().TextBoxFor(m => m.Address1)
    </div>
    <div class="form-group @Html.Gds().FormGroupClass(m => m.Address2)">
        @Html.Gds().LabelFor(m => m.Address2)
        @Html.Gds().ValidationMessageFor(m => m.Address2)
        @Html.Gds().TextBoxFor(m => m.Address2)
    </div>
    <div class="form-group @Html.Gds().FormGroupClass(m => m.TownOrCity)">
        @Html.Gds().LabelFor(m => m.TownOrCity)
        @Html.Gds().ValidationMessageFor(m => m.TownOrCity)
        @Html.Gds().TextBoxFor(m => m.TownOrCity)
    </div>
    <div class="form-group @Html.Gds().FormGroupClass(m => m.Postcode)">
        @Html.Gds().LabelFor(m => m.Postcode, "(optional for non-UK address)")
        @Html.Gds().ValidationMessageFor(m => m.Postcode)
        @Html.Gds().TextBoxFor(m => m.Postcode)
    </div>
    <div class="form-group @Html.Gds().FormGroupClass(m => m.CountryId)">
        @Html.Gds().LabelFor(m => m.CountryId)
        @Html.Gds().ValidationMessageFor(m => m.CountryId)
        @Html.Gds().DropDownListFor(m => m.CountryId, new SelectList(Model.Countries, "Id", "Name", Model.DefaultCountry.Id))
    </div>

    <div class="form-group @Html.Gds().FormGroupClass(m => m.BusinessType)">
        <label class="form-label">Organisation type</label>
        @Html.Gds().ValidationMessageFor(m => m.BusinessType)
        <label class="block-label">
            @Html.RadioButtonFor(m => m.BusinessType, "SoleTrader") Sole trader
        </label>
        <label class="block-label">
            @Html.RadioButtonFor(m => m.BusinessType, "Partnership") Partnership
        </label>
        <label class="block-label" data-target="companies-house-number">
            @Html.RadioButtonFor(m => m.BusinessType, "LimitedCompany") Limited company
        </label>
        <label class="block-label" data-target="other-description">
            @Html.RadioButtonFor(m => m.BusinessType, BusinessType.Other, new { @class = "business-type-radio-button" }) @EA.Prsd.Core.Helpers.EnumHelper.GetDisplayName(BusinessType.Other)
        </label>
        <div class="panel-indent @(Model.BusinessType != null && Model.BusinessType == BusinessType.Other ? "" : "js-hidden")" id="other-description">
            <div class="form-group @Html.Gds().FormGroupClass(m => m.OtherDescription)">
                @Html.Gds().LabelFor(m => m.OtherDescription)
                @Html.Gds().ValidationMessageFor(m => m.OtherDescription)
                @Html.Gds().TextBoxFor(m => m.OtherDescription)
            </div>
        </div>
    </div>
    
    @Html.HiddenFor(m => m.DefaultCountryId)
    
    <div class="form-group">
        <input type="submit" class="button" value="Continue" />
    </div>
}
