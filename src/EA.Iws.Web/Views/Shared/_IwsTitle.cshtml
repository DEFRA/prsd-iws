@if (User.Identity.IsAuthenticated)
{
        <div class="username-title-display">
            <ul>
                <li>
                    <div class="text-secondary inline">Signed in as:&nbsp</div><div class="username-format">@ViewBag.Name </div>
                </li>
                <li style="float: right;">
                    @using (Html.BeginForm("LogOff", "Account", routeValues: new { area = string.Empty }, method: FormMethod.Post, htmlAttributes: new { id = "logoutForm" }))
                    {
                        <button class="link-submit" type="submit">Sign out</button>
                    }
                </li>
            </ul>
        </div>
    <div class="account-link-banner title-dividing-line"></div>
}
