@model EA.Iws.Core.Shared.ContactData

<div class="form-group @Html.Gds().FormGroupClass(m => m.FirstName)">
    @Html.Gds().LabelFor(model => model.FirstName)
    @Html.Gds().ValidationMessageFor(model => model.FirstName)
    @Html.Gds().TextBoxFor(model => model.FirstName)
</div>

<div class="form-group @Html.Gds().FormGroupClass(m => m.LastName)">
    @Html.Gds().LabelFor(model => model.LastName)
    @Html.Gds().ValidationMessageFor(model => model.LastName)
    @Html.Gds().TextBoxFor(model => model.LastName)
</div>

<div class="form-group @Html.Gds().FormGroupClass(m => m.Telephone) @Html.Gds().FormGroupClass(m => m.TelephonePrefix)">
    @Html.Gds().LabelFor(model => model.Telephone)
    @Html.Gds().ValidationMessageFor(model => model.Telephone)
    @Html.Gds().ValidationMessageFor(model => model.TelephonePrefix)
    @Html.Gds().HintParagraph("Enter the full telephone number including the international dialling code for example +44  1709389201")
    <fieldset>
        <div class="international-number">
            <div class="plus-label">
                +
            </div>
            <div class="international-number-prefix">
                @Html.Gds().TextBoxFor(m => m.TelephonePrefix, new { @title = "Enter only up to 3 digits in the telephone prefix field" })
            </div>
            <div class="international-number-body">
                @Html.Gds().TextBoxFor(m => m.Telephone, false)
            </div>
        </div>
    </fieldset>
</div>

<div class="form-group @Html.Gds().FormGroupClass(m => m.Fax) @Html.Gds().FormGroupClass(m => m.FaxPrefix)">
    @Html.Gds().LabelFor(model => model.Fax)
    @Html.Gds().ValidationMessageFor(model => model.Fax)
    @Html.Gds().ValidationMessageFor(model => model.FaxPrefix)
    @Html.Gds().HintParagraph("Enter the full fax number including the international dialling code for example +44  1709389201")
    <fieldset>
        <div class="international-number">
            <div class="plus-label">
                +
            </div>
            <div class="international-number-prefix">
                @Html.Gds().TextBoxFor(m => m.FaxPrefix, new { @title = "Fax Prefix" })
            </div>
            <div class="international-number-body">
                @Html.Gds().TextBoxFor(m => m.Fax, false)
            </div>
        </div>
    </fieldset>
</div>

<div class="form-group @Html.Gds().FormGroupClass(m => m.Email)">
    @Html.Gds().LabelFor(model => model.Email)
    @Html.Gds().ValidationMessageFor(model => model.Email)
    @Html.Gds().TextBoxFor(model => model.Email)
</div>