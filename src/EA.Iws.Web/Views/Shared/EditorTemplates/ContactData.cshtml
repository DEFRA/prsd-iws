@using EA.Iws.Core.Shared
@model EA.Iws.Core.Shared.ContactData

<div class="form-group @Html.Gds().FormGroupClass(m => m.FullName)">
    @Html.Gds().LabelFor(model => model.FullName)
    @Html.Gds().ValidationMessageFor(model => model.FullName)
    @Html.Gds().TextBoxFor(model => model.FullName)
</div>

<div class="form-group @Html.Gds().FormGroupClass(m => m.Telephone) @Html.Gds().FormGroupClass(m => m.TelephonePrefix)">
    @Html.Gds().LabelFor(model => model.Telephone)
    @Html.Gds().ValidationMessageFor(model => model.TelephonePrefix)
    @Html.Gds().ValidationMessageFor(model => model.Telephone)
    @Html.Gds().HintParagraph(ContactDataResources.TelephoneHint)
    <fieldset>
        <div class="international-number">
            <div class="plus-label">
                +
            </div>
            <div class="international-number-prefix">
                @Html.Gds().TextBoxFor(m => m.TelephonePrefix, new { @title = ContactDataResources.TelephonePrefixTitle, @type = "number" })
            </div>
            <div class="international-number-body">
                @Html.Gds().TextBoxFor(m => m.Telephone, new { @type = "number" })
            </div>
        </div>
    </fieldset>
</div>

<div class="form-group @Html.Gds().FormGroupClass(m => m.Fax) @Html.Gds().FormGroupClass(m => m.FaxPrefix)">
    @Html.Gds().LabelFor(model => model.Fax)
    @Html.Gds().ValidationMessageFor(model => model.FaxPrefix)
    @Html.Gds().ValidationMessageFor(model => model.Fax)
    @Html.Gds().HintParagraph(ContactDataResources.FaxHint)
    <fieldset>
        <div class="international-number">
            <div class="plus-label">
                +
            </div>
            <div class="international-number-prefix">
                @Html.Gds().TextBoxFor(m => m.FaxPrefix, new { @title = ContactDataResources.FaxPrefixTitle, @type = "number" })
            </div>
            <div class="international-number-body">
                @Html.Gds().TextBoxFor(m => m.Fax, new { @type = "number" })
            </div>
        </div>
    </fieldset>
</div>

<div class="form-group @Html.Gds().FormGroupClass(m => m.Email)">
    @Html.Gds().LabelFor(model => model.Email)
    @Html.Gds().ValidationMessageFor(model => model.Email)
    @Html.Gds().TextBoxFor(model => model.Email, new { @type = "email" })
</div>