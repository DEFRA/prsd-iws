@model EA.Iws.Web.ViewModels.Shared.RadioButtonStringCollectionBase

@if (Model != null)
{
    @Html.ValidationMessageFor(model => model.SelectedValue, "", new { @class = "text-danger" })

    for (int i = 0; i < Model.PossibleValues.Count; i++)
    {
        MvcHtmlString idForThisRadioButton = Html.NameFor(m => m.PossibleValues[i]);


        <div class="form-group">

            <div>@Html.HiddenFor(m => m.PossibleValues[i])</div>

            <label for="@idForThisRadioButton" class="radio-button">

                @Html.RadioButtonFor(m => m.SelectedValue,
                    Model.PossibleValues[i],
                    new { id = idForThisRadioButton })

                @Html.DisplayFor(m => m.PossibleValues[i])
            </label>

        </div>
    }
}