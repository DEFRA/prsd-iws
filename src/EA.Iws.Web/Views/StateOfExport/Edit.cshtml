@model EA.Iws.Web.ViewModels.StateOfExport.EditStateOfExportViewModel
@{
    ViewBag.Title = "Edit State of Export";
}

<h2 class="heading-large">Where is the waste being exported from?</h2>

@using (Html.BeginForm())
{
    @Html.Gds().ValidationSummary()
    if (Model.ShowNextSection)
    {
        @Html.Partial("EditFullDetails", Model)

        @section scripts{
            <script>
                (function ($) {
                    $(function () {
                        $('#ExitPointId').selectToAutocomplete();
                    });
                })(jQuery);
            </script>
        }
    }
    else
    {
        @Html.Partial("EditCountryOnly", Model)

        @section scripts{
            <script>
                (function ($) {
                    $(function () {
                        $('#CountryId').selectToAutocomplete();
                    });
                })(jQuery);
            </script>
        }
    }
    
    @Html.HiddenFor(m => m.StateOfImportCountryId)
    if (Model.TransitStateCompetentAuthorityIds != null)
    {
        for (int i = 0; i < Model.TransitStateCompetentAuthorityIds.Count; i++)
         {
            @Html.HiddenFor(m => m.TransitStateCompetentAuthorityIds[i])
         }
    }
}